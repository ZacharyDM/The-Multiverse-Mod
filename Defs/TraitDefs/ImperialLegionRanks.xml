<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- Imperial Legion Branch 1: Standard Legionary Forces -->
  
  <TraitDef>
    <defName>ImperialLegionLegionary</defName>
    <label>Legion Legionary</label>
    <description>A member of the standard Imperial Legion forces, progressing through the traditional ranks of the legionary branch.</description>
    <degreeDatas>
      <li>
        <label>Recruit</label>
        <description>A new enlistee undergoing basic military training and learning discipline.</description>
        <skillGains>
          <Melee>1</Melee>
          <Shooting>1</Shooting>
          <Construction>1</Construction>
        </skillGains>
        <statOffsets>
          <MentalBreakThreshold>-0.02</MentalBreakThreshold>
        </statOffsets>
      </li>
      <li>
        <label>Spearman</label>
        <description>Basic infantry soldier trained in spear and shield combat formation.</description>
        <skillGains>
          <Melee>2</Melee>
          <Shooting>2</Shooting>
          <Construction>2</Construction>
          <Social>1</Social>
        </skillGains>
        <statOffsets>
          <MeleeHitChance>0.02</MeleeHitChance>
          <MentalBreakThreshold>-0.03</MentalBreakThreshold>
        </statOffsets>
      </li>
      <li>
        <label>Trooper</label>
        <description>Standard legionnaire competent in all basic military skills.</description>
        <skillGains>
          <Melee>3</Melee>
          <Shooting>3</Shooting>
          <Construction>2</Construction>
          <Social>1</Social>
        </skillGains>
        <statOffsets>
          <MeleeHitChance>0.03</MeleeHitChance>
          <ShootingAccuracyPawn>0.02</ShootingAccuracyPawn>
          <MentalBreakThreshold>-0.04</MentalBreakThreshold>
        </statOffsets>
      </li>
      <li>
        <label>Agent</label>
        <description>Intelligence specialist trained in investigation and special operations.</description>
        <skillGains>
          <Social>3</Social>
          <Intellectual>3</Intellectual>
          <Shooting>2</Shooting>
          <Melee>2</Melee>
        </skillGains>
        <statOffsets>
          <TradePriceImprovement>0.08</TradePriceImprovement>
          <SocialImpact>0.06</SocialImpact>
          <MentalBreakThreshold>-0.05</MentalBreakThreshold>
        </statOffsets>
      </li>
      <li>
        <label>Champion</label>
        <description>Elite warrior representing the pinnacle of the standard legionary forces.</description>
        <skillGains>
          <Melee>4</Melee>
          <Shooting>3</Shooting>
          <Social>2</Social>
          <Construction>2</Construction>
        </skillGains>
        <statOffsets>
          <MeleeHitChance>0.05</MeleeHitChance>
          <ShootingAccuracyPawn>0.03</ShootingAccuracyPawn>
          <ArmorRating_Blunt>0.1</ArmorRating_Blunt>
          <ArmorRating_Sharp>0.1</ArmorRating_Sharp>
          <MentalBreakThreshold>-0.06</MentalBreakThreshold>
        </statOffsets>
      </li>
    </degreeDatas>
    <biostatCpxFactor>1.15</biostatCpxFactor>
    <exclusionTags>
      <li>ImperialLegionRank</li>
    </exclusionTags>
  </TraitDef>

  <!-- Imperial Legion Branch 2: Order of Knights (Higher ranking than standard legionary forces) -->
  
  <TraitDef>
    <defName>ImperialLegionKnight</defName>
    <label>Legion Knight</label>
    <description>A member of the prestigious knightly order within the Imperial Legion, holding higher rank and status than standard legionaries.</description>
    <degreeDatas>
      <li>
        <label>Knight Errant</label>
        <description>A newly commissioned knight beginning their journey in the Imperial knighthood.</description>
        <skillGains>
          <Social>4</Social>
          <Melee>4</Melee>
          <Shooting>3</Shooting>
          <Intellectual>3</Intellectual>
          <Artistic>2</Artistic>
        </skillGains>
        <statOffsets>
          <SocialImpact>0.10</SocialImpact>
          <TradePriceImprovement>0.10</TradePriceImprovement>
          <MeleeHitChance>0.05</MeleeHitChance>
          <ArmorRating_Blunt>0.12</ArmorRating_Blunt>
          <ArmorRating_Sharp>0.12</ArmorRating_Sharp>
          <MentalBreakThreshold>-0.08</MentalBreakThreshold>
        </statOffsets>
      </li>
      <li>
        <label>Knight Bachelor</label>
        <description>An established knight who has proven their worth among the Imperial knighthood.</description>
        <skillGains>
          <Social>5</Social>
          <Melee>4</Melee>
          <Shooting>4</Shooting>
          <Intellectual>4</Intellectual>
          <Construction>3</Construction>
          <Artistic>2</Artistic>
        </skillGains>
        <statOffsets>
          <SocialImpact>0.15</SocialImpact>
          <TradePriceImprovement>0.12</TradePriceImprovement>
          <MeleeHitChance>0.06</MeleeHitChance>
          <ShootingAccuracyPawn>0.04</ShootingAccuracyPawn>
          <ArmorRating_Blunt>0.18</ArmorRating_Blunt>
          <ArmorRating_Sharp>0.18</ArmorRating_Sharp>
          <MentalBreakThreshold>-0.10</MentalBreakThreshold>
          <WorkSpeedGlobal>0.08</WorkSpeedGlobal>
        </statOffsets>
      </li>
      <li>
        <label>Knight Protector</label>
        <description>A senior knight entrusted with protecting important Imperial interests.</description>
        <skillGains>
          <Social>6</Social>
          <Intellectual>5</Intellectual>
          <Melee>5</Melee>
          <Shooting>4</Shooting>
          <Construction>4</Construction>
          <Artistic>3</Artistic>
        </skillGains>
        <statOffsets>
          <SocialImpact>0.18</SocialImpact>
          <TradePriceImprovement>0.15</TradePriceImprovement>
          <ResearchSpeedFactor>0.10</ResearchSpeedFactor>
          <MeleeHitChance>0.07</MeleeHitChance>
          <ShootingAccuracyPawn>0.05</ShootingAccuracyPawn>
          <ArmorRating_Blunt>0.20</ArmorRating_Blunt>
          <ArmorRating_Sharp>0.20</ArmorRating_Sharp>
          <MentalBreakThreshold>-0.12</MentalBreakThreshold>
          <WorkSpeedGlobal>0.10</WorkSpeedGlobal>
        </statOffsets>
      </li>
      <li>
        <label>Knight of the Imperial Dragon</label>
        <description>A high-ranking knight serving directly under the Dragon banner of the Empire.</description>
        <skillGains>
          <Social>7</Social>
          <Intellectual>6</Intellectual>
          <Melee>6</Melee>
          <Shooting>5</Shooting>
          <Construction>4</Construction>
          <Artistic>4</Artistic>
          <Medicine>3</Medicine>
        </skillGains>
        <statOffsets>
          <SocialImpact>0.25</SocialImpact>
          <TradePriceImprovement>0.20</TradePriceImprovement>
          <ResearchSpeedFactor>0.15</ResearchSpeedFactor>
          <MeleeHitChance>0.10</MeleeHitChance>
          <ShootingAccuracyPawn>0.08</ShootingAccuracyPawn>
          <ArmorRating_Blunt>0.25</ArmorRating_Blunt>
          <ArmorRating_Sharp>0.25</ArmorRating_Sharp>
          <MentalBreakThreshold>-0.15</MentalBreakThreshold>
          <WorkSpeedGlobal>0.15</WorkSpeedGlobal>
          <MoveSpeed>0.2</MoveSpeed>
        </statOffsets>
      </li>
      <li>
        <label>Knight of the Garland</label>
        <description>The highest rank of knighthood, honored with the ancient Garland of victory.</description>
        <skillGains>
          <Social>8</Social>
          <Intellectual>7</Intellectual>
          <Melee>7</Melee>
          <Shooting>6</Shooting>
          <Construction>5</Construction>
          <Artistic>5</Artistic>
          <Medicine>4</Medicine>
        </skillGains>
        <statOffsets>
          <SocialImpact>0.30</SocialImpact>
          <TradePriceImprovement>0.25</TradePriceImprovement>
          <ResearchSpeedFactor>0.20</ResearchSpeedFactor>
          <MeleeHitChance>0.12</MeleeHitChance>
          <ShootingAccuracyPawn>0.10</ShootingAccuracyPawn>
          <ArmorRating_Blunt>0.30</ArmorRating_Blunt>
          <ArmorRating_Sharp>0.30</ArmorRating_Sharp>
          <MentalBreakThreshold>-0.18</MentalBreakThreshold>
          <WorkSpeedGlobal>0.20</WorkSpeedGlobal>
          <MoveSpeed>0.3</MoveSpeed>
        </statOffsets>
      </li>
    </degreeDatas>
    <biostatCpxFactor>1.4</biostatCpxFactor>
    <exclusionTags>
      <li>ImperialLegionRank</li>
    </exclusionTags>
  </TraitDef>

  <!-- Supreme Leadership -->
  
