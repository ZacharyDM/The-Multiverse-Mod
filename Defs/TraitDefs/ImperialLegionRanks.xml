<Defs>
  <!-- Imperial Legion Entry Ranks -->
  
  <TraitDef>
    <defName>ImperialLegionRecruit</defName>
    <label>Legion Recruit</label>
    <description>A new member of the Imperial Legion undergoing basic military training. Still learning the fundamentals of soldiering.</description>
    <degreeDatas>
      <li>
        <label>Recruit</label>
        <description>Fresh recruit learning military basics and discipline.</description>
        <skillGains>
          <Melee>1</Melee>
          <Shooting>1</Shooting>
          <Construction>1</Construction>
        </skillGains>
        <statOffsets>
          <MentalBreakThreshold>-0.02</MentalBreakThreshold>
        </statOffsets>
      </li>
    </degreeDatas>
    <biostatCpxFactor>1.05</biostatCpxFactor>
    <exclusionTags>
      <li>ImperialLegionRank</li>
    </exclusionTags>
  </TraitDef>

