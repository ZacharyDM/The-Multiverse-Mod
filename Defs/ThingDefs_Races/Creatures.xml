<ThingDefs>
  <!-- Star Wars Creatures -->
  <ThingDef ParentName="AnimalThingBase">
    <defName>Bantha</defName>
    <label>bantha</label>
    <description>Large, shaggy mammals native to desert worlds like Tatooine. These creatures are used as pack animals and mounts by various desert-dwelling species, particularly the Tusken Raiders.</description>
    <statBases>
      <MoveSpeed>3.5</MoveSpeed>
      <ComfyTemperatureMin>-10</ComfyTemperatureMin>
      <ComfyTemperatureMax>60</ComfyTemperatureMax>
      <MarketValue>800</MarketValue>
    </statBases>
    <race>
      <body>QuadrupedAnimalWithHooves</body>
      <herdAnimal>true</herdAnimal>
      <baseBodySize>2.5</baseBodySize>
      <baseHealthScale>2.0</baseHealthScale>
      <baseHungerRate>0.8</baseHungerRate>
      <foodType>VegetarianRoughAnimal</foodType>
      <leatherDef>Leather_Heavy</leatherDef>
      <gestationPeriodDays>30</gestationPeriodDays>
      <meatMarketValue>1.2</meatMarketValue>
      <lifeExpectancy>25</lifeExpectancy>
      <manhunterOnTameFailChance>0.02</manhunterOnTameFailChance>
      <manhunterOnDamageChance>0.1</manhunterOnDamageChance>
      <wildness>0.6</wildness>
      <trainability>Advanced</trainability>
      <nuzzleMtbHours>120</nuzzleMtbHours>
      <nameOnTameChance>1</nameOnTameChance>
      <lifeStageAges>
        <li>
          <def>AnimalBaby</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>0.5</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>2</minAge>
          <soundWounded>Pawn_Elephant_Wounded</soundWounded>
          <soundDeath>Pawn_Elephant_Death</soundDeath>
          <soundCall>Pawn_Elephant_Call</soundCall>
          <soundAngry>Pawn_Elephant_Angry</soundAngry>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
    </race>
    <tools>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>16</power>
        <cooldownTime>2.6</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
      </li>
    </tools>
    <comps>
      <li Class="CompProperties_Milkable">
        <milkDef>Milk</milkDef>
        <milkIntervalDays>2</milkIntervalDays>
        <milkAmount>18</milkAmount>
      </li>
    </comps>
  </ThingDef>

