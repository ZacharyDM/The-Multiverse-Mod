<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!-- Dunmer-specific Precepts for Religious Memes -->
  
  <!-- Tribunal Temple Precepts -->
  <PreceptDef>
    <defName>TempleFaith_Required</defName>
    <label>temple faith</label>
    <description>The faithful must venerate the Living Gods and follow Temple orthodoxy.</description>
    <impact>Medium</impact>
    <associatedMemes>
      <li>TribunalWorship</li>
    </associatedMemes>
    <issue>Charity</issue>
    <defaultSelectionWeight>1</defaultSelectionWeight>
    <comps>
      <li Class="PreceptComp_SituationalThought">
        <thought>TempleFaith_Satisfied</thought>
        <eventDef>CharityFulfilled</eventDef>
      </li>
    </comps>
  </PreceptDef>

  <!-- House Honor Precepts - now part of Tribunal Worship -->
  <PreceptDef>
    <defName>HouseHonor_Required</defName>
    <label>house honor</label>
