<?xml version="1.0" encoding="utf-8"?>
<ThingDefs>
  <ThingDef ParentName="HalfMerBase">
    <defName>HalfDunmer</defName>
    <label>half dunmer</label>
    <description>A hybrid, born of a Dunmer and human parentage. Displays traits of both.</description>
    <race>
      <body>Humanoid</body>
      <baseBodySize>1.0</baseBodySize>
      <healthScale>1.0</healthScale>
      <foodTypeFlags>VegetarianOrMeat</foodTypeFlags>
      <gestationPeriodDays>30</gestationPeriodDays>
      <wildness>0.0</wildness>
      <intelligence>Humanlike</intelligence>
      <lifeStageAges Inherit="False">
        <li>
          <def>HumanBaby</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>HumanChild</def>
          <minAge>3</minAge>
        </li>
        <li>
          <def>HumanAdult</def>
          <minAge>13</minAge>
        </li>
        <li>
          <def>HumanOld</def>
          <minAge>65</minAge>
        </li>
      </lifeStageAges>
    </race>
    <statBases>
      <MoveSpeed>4.5</MoveSpeed> <!-- Slightly less than full Dunmer, example -->
      <MarketValue>2800</MarketValue>
      <ShootingAccuracyPawn>0.04</ShootingAccuracyPawn>
      <MeleeHitChance>0.05</MeleeHitChance>
    </statBases>
    <thingCategories>
      <li>Pawns</li>
    </thingCategories>
    <graphicData>
      <texPath>UI/Icons/ThingCategories/HalfDunmer</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
  </ThingDef>
</ThingDefs>