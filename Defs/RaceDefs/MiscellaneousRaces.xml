      <!-- Dreugh have crustacean coloring -->
      <colorGenerator Class="ColorGenerator_Options">
        <options>
          <li>
            <weight>40</weight>
            <only>(0.6, 0.3, 0.2, 1)</only> <!-- Reddish-brown -->
          </li>
          <li>
            <weight>30</weight>
            <only>(0.4, 0.5, 0.4, 1)</only> <!-- Green-brown -->
          </li>
          <li>
            <weight>20</weight>
            <only>(0.5, 0.4, 0.3, 1)</only> <!-- Brown -->
          </li>
          <li>
            <weight>10</weight>
            <only>(0.3, 0.4, 0.5, 1)</only> <!-- Blue-grey -->
          </li>
        </options>
      </colorGenerator>
      <baseBodySize>1.3</baseBodySize>
      <healthScale>1.4</healthScale>
      <forcedTraits>
        <li>DreudhAmphibious</li>
      </forcedTraits>
      <lifeExpectancy>150</lifeExpectancy>
    </race>
    <statBases>
      <MoveSpeed>3.8</MoveSpeed>
      <MarketValue>3500</MarketValue>
      <ShootingAccuracyPawn>0.01</ShootingAccuracyPawn>
      <MeleeHitChance>0.05</MeleeHitChance>
