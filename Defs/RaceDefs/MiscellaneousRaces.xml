  <ThingDef ParentName="MonstrousRaceBase">
    <defName>Centaur</defName>
    <label>centaur</label>
    <description>Half-human, half-horse beings known for their speed, archery skills, and connection to nature. They are proud and independent with a strong warrior culture.</description>
    <race>
      <!-- Centaurs have human-like upper body and horse lower body coloring -->
      <colorGenerator Class="ColorGenerator_Options">
        <options>
          <li>
            <weight>30</weight>
            <only>(0.8, 0.7, 0.6, 1)</only> <!-- Tan -->
          </li>
          <li>
            <weight>25</weight>
            <only>(0.6, 0.4, 0.3, 1)</only> <!-- Brown -->
          </li>
          <li>
            <weight>20</weight>
            <only>(0.9, 0.8, 0.7, 1)</only> <!-- Light tan -->
          </li>
          <li>
            <weight>15</weight>
            <only>(0.3, 0.3, 0.3, 1)</only> <!-- Dark -->
          </li>
          <li>
            <weight>10</weight>
            <only>(1.0, 1.0, 1.0, 1)</only> <!-- White -->
          </li>
        </options>
      </colorGenerator>
      <baseBodySize>1.8</baseBodySize>
      <healthScale>1.6</healthScale>
      <forcedTraits>
        <li>CentaurWild</li>
      </forcedTraits>
      <lifeExpectancy>200</lifeExpectancy>
    </race>
    <statBases>
      <MoveSpeed>6.5</MoveSpeed>
      <MarketValue>4000</MarketValue>
      <ShootingAccuracyPawn>0.08</ShootingAccuracyPawn>
      <MeleeHitChance>0.06</MeleeHitChance>
      <ComfyTemperatureMin>-15</ComfyTemperatureMin>
      <ComfyTemperatureMax>45</ComfyTemperatureMax>
    </statBases>
    <graphicData>
      <texPath>UI/Icons/ThingCategories/Centaur</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
  </ThingDef>

  <ThingDef ParentName="MonstrousRaceBase">
    <defName>Giant</defName>
    <label>giant</label>
    <description>Massive humanoids of immense size and strength. They are simple folk who prefer solitary lives, but their incredible physical power makes them formidable when roused.</description>
    <race>
      <!-- Giants have human-like but weathered skin -->
      <colorGenerator Class="ColorGenerator_Options">
        <options>
          <li>
            <weight>40</weight>
            <only>(0.7, 0.6, 0.5, 1)</only> <!-- Weathered -->
          </li>
          <li>
            <weight>30</weight>
            <only>(0.6, 0.5, 0.4, 1)</only> <!-- Tanned -->
          </li>
          <li>
            <weight>20</weight>
            <only>(0.8, 0.7, 0.6, 1)</only> <!-- Light weathered -->
          </li>
          <li>
            <weight>10</weight>
            <only>(0.5, 0.4, 0.3, 1)</only> <!-- Dark weathered -->
          </li>
        </options>
      </colorGenerator>
      <baseBodySize>2.5</baseBodySize>
      <healthScale>2.5</healthScale>
      <forcedTraits>
        <li>GiantStrength</li>
      </forcedTraits>
      <lifeExpectancy>300</lifeExpectancy>
    </race>
    <statBases>
      <MoveSpeed>3.0</MoveSpeed>
      <MarketValue>5500</MarketValue>
      <ShootingAccuracyPawn>-0.05</ShootingAccuracyPawn>
      <MeleeHitChance>0.15</MeleeHitChance>
      <ComfyTemperatureMin>-30</ComfyTemperatureMin>
      <ComfyTemperatureMax>40</ComfyTemperatureMax>
