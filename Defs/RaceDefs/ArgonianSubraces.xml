<ThingDefs>

  <!-- Saxhleel - Standard Argonians -->
  <ThingDef ParentName="BeastRaceBase">
    <defName>ArgonianSaxhleel</defName>
    <label>saxhleel</label>
    <description>The most common subrace of Argonians, the Saxhleel are the standard marsh-dwelling lizard-folk connected to the Hist trees. They possess excellent disease resistance and natural healing abilities.</description>
    <race>
      <colorGenerator Class="ColorGenerator_Options">
        <options>
          <li>
            <weight>35</weight>
            <only>(0.4, 0.6, 0.3, 1)</only> <!-- Green -->
          </li>
          <li>
            <weight>25</weight>
            <only>(0.5, 0.4, 0.2, 1)</only> <!-- Brown -->
          </li>
          <li>
            <weight>20</weight>
            <only>(0.3, 0.5, 0.5, 1)</only> <!-- Teal -->
          </li>
          <li>
            <weight>15</weight>
            <only>(0.6, 0.5, 0.2, 1)</only> <!-- Yellow-brown -->
          </li>
          <li>
            <weight>5</weight>
            <only>(0.2, 0.2, 0.4, 1)</only> <!-- Blue-grey -->
          </li>
        </options>
      </colorGenerator>
      <baseBodySize>1.0</baseBodySize>
      <forcedTraits>
        <li>SaxhleelAdaptation</li>
        <li>RestorationMastery</li>
        <li>MysticismMastery</li>
      </forcedTraits>
    </race>
    <statBases>
      <MoveSpeed>4.7</MoveSpeed>
      <MarketValue>3300</MarketValue>
      <ShootingAccuracyPawn>0.03</ShootingAccuracyPawn>
      <MeleeHitChance>0.04</MeleeHitChance>
      <ComfyTemperatureMin>-5</ComfyTemperatureMin>
      <ComfyTemperatureMax>50</ComfyTemperatureMax>
    </statBases>
    <graphicData>
      <texPath>UI/Icons/ThingCategories/ArgonianSaxhleel</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
  </ThingDef>

