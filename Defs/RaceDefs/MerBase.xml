<?xml version="1.0" encoding="utf-8"?>
<ThingDefs>
  <ThingDef Name="MerBase">
    <defName>MerBase</defName>
    <label>mer</label>
    <description>Template base for all Mer (elf) races. Contains shared traits and settings.</description>
    <race>
      <body>Humanoid</body>
      <baseBodySize>1.0</baseBodySize>
      <healthScale>1.0</healthScale>
      <foodTypeFlags>VegetarianOrMeat</foodTypeFlags>
      <gestationPeriodDays>30</gestationPeriodDays>
      <wildness>0.0</wildness>
      <intelligence>Humanlike</intelligence>
      <!-- Lore-based life stages: longer lived than humans -->
      <lifeStageAges Inherit="False">
        <li>
          <def>HumanBaby</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>HumanChild</def>
          <minAge>10</minAge>
        </li>
        <li>
          <def>HumanAdult</def>
          <minAge>30</minAge>
        </li>
        <li>
          <def>HumanOld</def>
          <minAge>150</minAge>
        </li>
      </lifeStageAges>
      <!-- Lore-based max lifespan and spawn curve -->
      <lifeExpectancy>200</lifeExpectancy>
      <ageGenerationCurve>
        <points>
          <li>
            <x>20</x>
            <y>0.5</y>
          </li>
          <li>
            <x>50</x>
            <y>1.0</y>
          </li>
          <li>
            <x>100</x>
            <y>0.8</y>
          </li>
          <li>
            <x>150</x>
            <y>0.5</y>
          </li>
          <li>
            <x>200</x>
            <y>0.1</y>
          </li>
        </points>
      </ageGenerationCurve>
    </race>
    <statBases>
      <MoveSpeed>4.5</MoveSpeed>
      <MarketValue>3000</MarketValue>
      <ComfyTemperatureMin>-10</ComfyTemperatureMin>
      <ComfyTemperatureMax>40</ComfyTemperatureMax>
      <ShootingAccuracyPawn>0.04</ShootingAccuracyPawn>
      <MeleeHitChance>0.05</MeleeHitChance>
    </statBases>
    <thingCategories>
      <li>Pawns</li>
    </thingCategories>
    <graphicData>
      <texPath>UI/Icons/ThingCategories/MerBase</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <!-- Add shared Mer traits here -->
  </ThingDef>
</ThingDefs>