  <!-- Nord -->
  <ThingDef ParentName="FantasyHumanoidBase">
    <defName>Nord</defName>
    <label>nord</label>
    <description>Hardy humans from the northern province of Skyrim. Nords are renowned warriors with natural resistance to frost and a strong martial tradition. They value honor, courage, and strength above all else.</description>
    <race>
      <lifeExpectancy>90</lifeExpectancy>
      <colorGenerator Class="ColorGenerator_Options">
        <options>
          <li>
            <only>FFFCF0</only>
          </li>
          <li>
            <only>F7E6C2</only>
          </li>
          <li>
            <only>E8B887</only>
          </li>
          <li>
            <only>D4A574</only>
          </li>
        </options>
      </colorGenerator>
      <forcedTraits>
        <li>
          <def>FrostResistant</def>
        </li>
      </forcedTraits>
    </race>
    <statBases>
      <MarketValue>2100</MarketValue>
      <MoveSpeed>4.7</MoveSpeed>
      <MeleeDamageFactor>1.15</MeleeDamageFactor>
      <ComfyTemperatureMin>-25</ComfyTemperatureMin>
      <ComfyTemperatureMax>30</ComfyTemperatureMax>
      <MeleeHitChance>1.10</MeleeHitChance>
    </statBases>
  </ThingDef>

