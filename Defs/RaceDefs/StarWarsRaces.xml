  <!-- Rodian -->
  <ThingDef ParentName="AlienBase">
    <defName>Rodian</defName>
    <label>rodian</label>
    <description>Green-skinned reptilian humanoids from the planet Rodia. Rodians are natural hunters with exceptional eyesight and reflexes. They have a culture that values hunting prowess and are often found working as bounty hunters or scouts.</description>
    <race>
      <colorGenerator Class="ColorGenerator_Single">
        <color>(0.4, 0.7, 0.3, 1)</color>
      </colorGenerator>
      <forcedTraits>
        <li>
          <def>Hunter</def>
        </li>
      </forcedTraits>
    </race>
    <statBases>
      <MarketValue>2300</MarketValue>
      <ShootingAccuracyPawn>1.25</ShootingAccuracyPawn>
      <MeleeHitChance>1.10</MeleeHitChance>
      <HuntingStealth>1.30</HuntingStealth>
    </statBases>
  </ThingDef>

