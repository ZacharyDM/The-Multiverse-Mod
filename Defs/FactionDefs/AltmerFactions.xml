<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- Altmer Faction Definitions -->

  <!-- Crystal Tower Academy - Scholarly institution -->
  <FactionDef>
    <defName>CrystalTowerAcademy</defName>
    <label>Crystal Tower Academy</label>
    <description>The prestigious Crystal Tower Academy is the greatest center of learning in all of Tamriel, where the finest Altmer scholars pursue knowledge in all fields of study. They are peaceful researchers who trade rare books, magical components, and scholarly services.</description>
    <pawnSingular>scholar</pawnSingular>
    <pawnsPlural>scholars</pawnsPlural>
    <listOrderPriority>40</listOrderPriority>
    <settlementGenerationWeight>0.5</settlementGenerationWeight>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
    <maxCountAtGameStart>2</maxCountAtGameStart>
    <canMakeRandomly>true</canMakeRandomly>
    <canSiege>false</canSiege>
    <canStageAttacks>false</canStageAttacks>
    <leaderTitle>Grand Scholar</leaderTitle>
    <fixedName>Crystal Tower Academy</fixedName>
    <factionIconPath>UI/Factions/CrystalTowerAcademy</factionIconPath>
    <colorSpectrum>
      <li>(0.8, 0.9, 1.0)</li>
    </colorSpectrum>
    <requiredMemes>
      <li>MagnusWorship</li>
    </requiredMemes>
    <allowedCultures>
      <li>Altmer</li>
    </allowedCultures>
    <structureMemeWeights>
      <Structure_OriginChristian MayRequire="Ludeon.RimWorld.Ideology">1</Structure_OriginChristian>
    </structureMemeWeights>
    <techLevel>Medieval</techLevel>
    <backstoryFilters>
      <li>
        <categories>
          <li>AltmerScholarly</li>
        </categories>
      </li>
    </backstoryFilters>
    <allowedArrivalTemperatureRange>-40~45</allowedArrivalTemperatureRange>
    <raidCommonalityFromPointsCurve>
      <points>
        <li>(0, 0)</li>
        <li>(5000, 0)</li>
      </points>
    </raidCommonalityFromPointsCurve>
    <maxPawnCostPerTotalPointsCurve>
      <points>
        <li>(0, 35)</li>
        <li>(70, 50)</li>
        <li>(700, 100)</li>
        <li>(1400, 150)</li>
        <li>(50000, 10000)</li>
      </points>
    </maxPawnCostPerTotalPointsCurve>
    <pawnGroupMakers>
      <li>
        <kindDef>Peaceful</kindDef>
        <commonality>1.0</commonality>
        <options>
          <AltmerCivilian>10</AltmerCivilian>
        </options>
      </li>
    </pawnGroupMakers>
    <settlementTexturePath>World/WorldObjects/DefaultSettlement</settlementTexturePath>
  </FactionDef>

