<?xml version="1.0" encoding="utf-8"?>
<FactionDefs>
  <!-- Galactic Empire -->
  <FactionDef>
    <defName>GalacticEmpire</defName>
    <label>Galactic Empire</label>
    <description>The authoritarian galactic government that rules through fear and military might. Known for their disciplined stormtroopers and massive star destroyers.</description>
    <categoryTag>Empire</categoryTag>
    <listOrderPriority>40</listOrderPriority>
    <settlementGenerationWeight>1</settlementGenerationWeight>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
    <canMakeRandomly>true</canMakeRandomly>
    <canSiege>true</canSiege>
    <canStageAttacks>true</canStageAttacks>
    <leaderTitle>Moff</leaderTitle>
    <factionIconPath>World/WorldObjects/Expanding/Town</factionIconPath>
    <colorSpectrum>
      <li>(0.35, 0.35, 0.35)</li>
    </colorSpectrum>
    <requiredMemes>
      <li>Supremacist</li>
      <li>Loyalist</li>
    </requiredMemes>
    <structureMemeWeights>
      <Structure_Authoritarian>2</Structure_Authoritarian>
    </structureMemeWeights>
    <allowedCultures>
      <li>Astropolitan</li>
    </allowedCultures>
    <techLevel>Spacer</techLevel>
    <backstoryCategories>
      <li>Imperial</li>
    </backstoryCategories>
    <geneticVariance>1</geneticVariance>
    <hairTagFilter>
      <whitelist>true</whitelist>
      <tags>
        <li>Rural</li>
        <li>Urban</li>
      </tags>
    </hairTagFilter>
    <apparelStuffFilter>
      <thingDefs>
        <li>Synthread</li>
        <li>Hyperweave</li>
      </thingDefs>
    </apparelStuffFilter>
    <raidCommonalityFromPointsCurve>
      <points>
        <li>(0, 1)</li>
        <li>(3000, 3)</li>
        <li>(8000, 1)</li>
      </points>
    </raidCommonalityFromPointsCurve>
  </FactionDef>

