<?xml version="1.0" encoding="utf-8"?>
<FactionDefs>
  <!-- Wood Orcs Faction - Valenwood Orcs -->
  <FactionDef>
    <defName>WoodOrcs</defName>
    <label>Wood Orcs</label>
    <description>Orsimer tribes that have adapted to life in the forests of Valenwood, blending traditional Orc strength with Bosmeri forest wisdom. They are skilled hunters and craftsmen who respect the Green Pact while maintaining their warrior traditions.</description>
    <color>(0.15, 0.5, 0.2, 1)</color>
    <allowedRaceDefs>
      <li>Orsimer</li>
    </allowedRaceDefs>
    <techLevel>Medieval</techLevel>
    <hidden>false</hidden>
    <requiredCountAtGameStart>0</requiredCountAtGameStart>
    <maxCountAtGameStart>1</maxCountAtGameStart>
    <canMakeRandomly>true</canMakeRandomly>
    <canSiege>true</canSiege>
    <canStageAttacks>true</canStageAttacks>
    <leaderTitle>Forest Chief</leaderTitle>
    <factionIconPath>UI/Factions/WoodOrcs</factionIconPath>
    <settlementGenerationWeight>0.6</settlementGenerationWeight>
    <requiredMemes>
      <li MayRequire="Ludeon.RimWorld.Ideology">TreeConnection</li>
      <li MayRequire="Ludeon.RimWorld.Ideology">NaturePrimacy</li>
    </requiredMemes>
  </FactionDef>

  <!-- Iron Orcs Faction - Dragontail Mountain Orcs -->
  <FactionDef>
    <defName>IronOrcs</defName>
    <label>Iron Orcs</label>
    <description>Orsimer clans dwelling in the harsh Dragontail Mountains, renowned as the greatest metalworkers and miners among all Orc tribes. They work with the rarest ores and maintain fiercely independent mountain strongholds.</description>
    <color>(0.4, 0.4, 0.4, 1)</color>
    <allowedRaceDefs>
