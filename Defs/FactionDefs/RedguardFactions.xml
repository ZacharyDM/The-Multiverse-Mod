<Defs>
  <!-- Hammerfell Crown Party -->
  <FactionDef>
    <defName>HammerfellCrowns</defName>
    <label>Crown Party of Hammerfell</label>
    <description>The Crown party represents the traditional Redguard nobility who uphold ancient Yokudan customs and resist foreign influence. They favor preservation of traditional culture, honor, and the old ways of sword-singing.</description>
    <colorSpectrum>
      <li>(0.6, 0.15, 0.15)</li>
      <li>(0.7, 0.2, 0.1)</li>
      <li>(0.8, 0.3, 0.2)</li>
    </colorSpectrum>
    <allowedRaceDefs>
      <li>Redguard</li>
    </allowedRaceDefs>
    <techLevel>Medieval</techLevel>
    <factionIconPath>UI/Icons/Factions/CrownParty</factionIconPath>
    <settlementGenerationWeight>0.8</settlementGenerationWeight>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
    <canMakeRandomly>true</canMakeRandomly>
    <canSiege>true</canSiege>
    <canStageAttacks>true</canStageAttacks>
    <leaderTitle>High King</leaderTitle>
    <startingGoodwill>
      <min>-30</min>
      <max>30</max>
    </startingGoodwill>
    <maxConfigurableAtWorldCreation>9999</maxConfigurableAtWorldCreation>
    <configurationListOrderPriority>50</configurationListOrderPriority>
  </FactionDef>

