      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>7200</disappearsAfterTicks>
      </li>
      <li Class="HediffCompProperties_GlowRadius">
        <glowRadius>7</glowRadius>
        <glowColor>(255, 255, 200, 0)</glowColor>
      </li>
    </comps>
  </HediffDef>

  <HediffDef>
    <defName>MorrowindCalmed</defName>
