<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- Restoration Spell Effects -->
  <HediffDef>
    <defName>MorrowindRestoredStamina</defName>
    <label>restored stamina</label>
    <description>Enhanced energy and reduced fatigue from restoration magic.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.7, 1.0, 0.7)</defaultLabelColor>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>1800</disappearsAfterTicks>
      </li>
    </comps>
    <stages>
      <li>
        <statOffsets>
          <MoveSpeed>0.2</MoveSpeed>
          <WorkSpeedGlobal>0.1</WorkSpeedGlobal>
        </statOffsets>
      </li>
    </stages>
  </HediffDef>

  <HediffDef>
    <defName>MorrowindMagicalShield</defName>
    <label>magical shield</label>
    <description>A protective barrier that absorbs incoming damage.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.7, 0.7, 1.0)</defaultLabelColor>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>3600</disappearsAfterTicks>
      </li>
    </comps>
    <stages>
      <li>
        <statOffsets>
          <ArmorRating_Blunt>0.3</ArmorRating_Blunt>
          <ArmorRating_Sharp>0.3</ArmorRating_Sharp>
        </statOffsets>
      </li>
    </stages>
  </HediffDef>

