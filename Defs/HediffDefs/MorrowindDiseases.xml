<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!-- Ataxia: Common disease affecting coordination and agility -->
  <HediffDef>
    <defName>Ataxia</defName>
    <label>ataxia</label>
    <description>A disease that impairs coordination and dexterity, making the victim clumsy and prone to stumbling. Common among those who frequent damp, underground areas.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.7, 0.5, 0.2)</defaultLabelColor>
    <isBad>true</isBad>
    <maxSeverity>1.0</maxSeverity>
    <initialSeverity>0.3</initialSeverity>
    <tendable>true</tendable>
    <chronic>false</chronic>
    <stages>
      <li>
        <label>mild</label>
        <minSeverity>0</minSeverity>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.1</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.05</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>moderate</label>
        <minSeverity>0.5</minSeverity>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.2</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.15</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>severe</label>
        <minSeverity>0.8</minSeverity>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.35</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.25</offset>
          </li>
        </capMods>
      </li>
    </stages>
    <comps>
      <li Class="HediffCompProperties_Immunizable">
        <severityPerDayNotImmune>0.05</severityPerDayNotImmune>
        <severityPerDayNotImmuneRandomFactor>0.3</severityPerDayNotImmuneRandomFactor>
        <immunityPerDayNotSick>-0.02</immunityPerDayNotSick>
        <immunityPerDaySick>0.25</immunityPerDaySick>
        <severityPerDayImmune>-0.2</severityPerDayImmune>
      </li>
    </comps>
  </HediffDef>

  <!-- Bone Break Fever: Weakens physical constitution -->
  <HediffDef>
    <defName>BoneBreakFever</defName>
    <label>bone break fever</label>
    <description>A fever that weakens bones and muscles, causing intense aching throughout the body. Often contracted from infected animal bites.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.8, 0.4, 0.3)</defaultLabelColor>
    <isBad>true</isBad>
    <maxSeverity>1.0</maxSeverity>
    <initialSeverity>0.25</initialSeverity>
    <tendable>true</tendable>
    <chronic>false</chronic>
    <stages>
      <li>
        <label>mild</label>
        <minSeverity>0</minSeverity>
        <statOffsets>
          <MoveSpeed>-0.1</MoveSpeed>
          <WorkSpeedGlobal>-0.05</WorkSpeedGlobal>
        </statOffsets>
        <capMods>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.1</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>moderate</label>
        <minSeverity>0.5</minSeverity>
        <statOffsets>
          <MoveSpeed>-0.2</MoveSpeed>
          <WorkSpeedGlobal>-0.15</WorkSpeedGlobal>
        </statOffsets>
        <capMods>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.2</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.15</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>severe</label>
        <minSeverity>0.8</minSeverity>
        <statOffsets>
          <MoveSpeed>-0.35</MoveSpeed>
          <WorkSpeedGlobal>-0.25</WorkSpeedGlobal>
        </statOffsets>
        <capMods>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.35</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.3</offset>
          </li>
        </capMods>
      </li>
    </stages>
    <comps>
      <li Class="HediffCompProperties_Immunizable">
        <severityPerDayNotImmune>0.08</severityPerDayNotImmune>
        <severityPerDayNotImmuneRandomFactor>0.4</severityPerDayNotImmuneRandomFactor>
        <immunityPerDayNotSick>-0.03</immunityPerDayNotSick>
        <immunityPerDaySick>0.3</immunityPerDaySick>
        <severityPerDayImmune>-0.25</severityPerDayImmune>
      </li>
    </comps>
  </HediffDef>

  <!-- Chanthrax Blight: Affects mental faculties and social ability -->
  <HediffDef>
    <defName>ChanthraxBlight</defName>
    <label>chanthrax blight</label>
    <description>A magical blight that clouds the mind and diminishes one's force of personality. Victims often become withdrawn and struggle with complex thoughts.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.5, 0.3, 0.6)</defaultLabelColor>
    <isBad>true</isBad>
    <maxSeverity>1.0</maxSeverity>
    <initialSeverity>0.2</initialSeverity>
    <tendable>true</tendable>
    <chronic>false</chronic>
    <stages>
      <li>
        <label>mild</label>
        <minSeverity>0</minSeverity>
        <statOffsets>
          <SocialImpact>-0.15</SocialImpact>
          <GlobalLearningFactor>-0.1</GlobalLearningFactor>
        </statOffsets>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.05</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>moderate</label>
        <minSeverity>0.5</minSeverity>
        <statOffsets>
          <SocialImpact>-0.3</SocialImpact>
          <GlobalLearningFactor>-0.2</GlobalLearningFactor>
        </statOffsets>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.15</offset>
          </li>
          <li>
            <capacity>Talking</capacity>
            <offset>-0.1</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>severe</label>
        <minSeverity>0.8</minSeverity>
        <statOffsets>
          <SocialImpact>-0.5</SocialImpact>
          <GlobalLearningFactor>-0.35</GlobalLearningFactor>
        </statOffsets>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.3</offset>
          </li>
          <li>
            <capacity>Talking</capacity>
            <offset>-0.25</offset>
          </li>
        </capMods>
      </li>
    </stages>
    <comps>
      <li Class="HediffCompProperties_Immunizable">
        <severityPerDayNotImmune>0.04</severityPerDayNotImmune>
        <severityPerDayNotImmuneRandomFactor>0.2</severityPerDayNotImmuneRandomFactor>
        <immunityPerDayNotSick>-0.02</immunityPerDayNotSick>
        <immunityPerDaySick>0.2</immunityPerDaySick>
        <severityPerDayImmune>-0.15</severityPerDayImmune>
      </li>
    </comps>
  </HediffDef>

  <!-- Collywobbles: Stomach disease affecting agility and endurance -->
  <HediffDef>
    <defName>Collywobbles</defName>
    <label>collywobbles</label>
    <description>A stomach ailment causing severe cramps and nausea, making movement painful and endurance limited. Often caused by consuming tainted food or water.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.6, 0.7, 0.3)</defaultLabelColor>
    <isBad>true</isBad>
    <maxSeverity>1.0</maxSeverity>
    <initialSeverity>0.4</initialSeverity>
    <tendable>true</tendable>
    <chronic>false</chronic>
    <stages>
      <li>
        <label>mild</label>
        <minSeverity>0</minSeverity>
        <statOffsets>
          <MoveSpeed>-0.15</MoveSpeed>
          <RestRateMultiplier>-0.1</RestRateMultiplier>
        </statOffsets>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.1</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>moderate</label>
        <minSeverity>0.5</minSeverity>
        <statOffsets>
          <MoveSpeed>-0.25</MoveSpeed>
          <RestRateMultiplier>-0.2</RestRateMultiplier>
        </statOffsets>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.2</offset>
          </li>
          <li>
            <capacity>Eating</capacity>
            <offset>-0.15</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>severe</label>
        <minSeverity>0.8</minSeverity>
        <statOffsets>
          <MoveSpeed>-0.4</MoveSpeed>
          <RestRateMultiplier>-0.35</RestRateMultiplier>
        </statOffsets>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.35</offset>
          </li>
          <li>
            <capacity>Eating</capacity>
            <offset>-0.3</offset>
          </li>
        </capMods>
      </li>
    </stages>
    <comps>
      <li Class="HediffCompProperties_Immunizable">
        <severityPerDayNotImmune>0.12</severityPerDayNotImmune>
        <severityPerDayNotImmuneRandomFactor>0.5</severityPerDayNotImmuneRandomFactor>
        <immunityPerDayNotSick>-0.04</immunityPerDayNotSick>
        <immunityPerDaySick>0.35</immunityPerDaySick>
        <severityPerDayImmune>-0.3</severityPerDayImmune>
      </li>
    </comps>
  </HediffDef>

