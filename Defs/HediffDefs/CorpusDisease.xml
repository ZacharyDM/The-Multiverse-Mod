<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <HediffDef>
    <defName>CorpusDisease</defName>
    <label>corpus</label>
    <description>A divine disease that transforms the flesh of the infected, granting resistance to conventional ailments but causing gradual physical and mental degradation. Contracted through serious injuries inflicted by corpus beasts or ash vampires.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.8, 0.4, 0.2)</defaultLabelColor>
    <isBad>true</isBad>
    <maxSeverity>1.0</maxSeverity>
    <initialSeverity>0.25</initialSeverity>
    <lethalSeverity>0.95</lethalSeverity>
    <tendable>false</tendable>
    <chronic>true</chronic>
    <stages>
      <li>
        <label>minor</label>
        <minSeverity>0</minSeverity>
        <statOffsets>
          <ImmunityGainSpeed>0.15</ImmunityGainSpeed>
          <ToxicResistance>0.25</ToxicResistance>
        </statOffsets>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.05</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>moderate</label>
        <minSeverity>0.4</minSeverity>
        <statOffsets>
          <ImmunityGainSpeed>0.25</ImmunityGainSpeed>
          <ToxicResistance>0.5</ToxicResistance>
        </statOffsets>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.1</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.05</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>major</label>
        <minSeverity>0.7</minSeverity>
        <statOffsets>
          <ImmunityGainSpeed>0.4</ImmunityGainSpeed>
          <ToxicResistance>0.75</ToxicResistance>
        </statOffsets>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.2</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.15</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.1</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>extreme</label>
        <minSeverity>0.85</minSeverity>
        <lifeThreatening>true</lifeThreatening>
        <statOffsets>
          <ImmunityGainSpeed>0.6</ImmunityGainSpeed>
          <ToxicResistance>1.0</ToxicResistance>
        </statOffsets>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.4</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.3</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.25</offset>
          </li>
          <li>
            <capacity>Talking</capacity>
            <offset>-0.2</offset>
          </li>
        </capMods>
      </li>
    </stages>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>0.02</severityPerDay>
      </li>
    </comps>
  </HediffDef>
</Defs>