<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!-- Restore Health Effect -->
  <HediffDef>
    <defName>RestoreHealthEffect</defName>
    <label>restore health</label>
    <description>The body regenerates health at an accelerated rate due to alchemical enhancement.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.8, 1.0, 0.8)</defaultLabelColor>
    <scenarioCanAdd>false</scenarioCanAdd>
    <maxSeverity>1.0</maxSeverity>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_Immunizable">
        <severityPerDayNotImmune>-0.25</severityPerDayNotImmune>
      </li>
    </comps>
    <stages>
      <li>
        <minSeverity>0</minSeverity>
        <naturalHealingFactor>3.0</naturalHealingFactor>
        <statOffsets>
          <InjuryHealingFactor>2.0</InjuryHealingFactor>
        </statOffsets>
      </li>
    </stages>
  </HediffDef>

