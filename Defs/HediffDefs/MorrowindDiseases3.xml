<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!-- Swamp Fever: Tropical disease affecting strength and endurance -->
  <HediffDef>
    <defName>SwampFever</defName>
    <label>swamp fever</label>
    <description>A fever contracted in marshy environments that saps physical strength and endurance. The victim suffers from constant fatigue and muscle weakness.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.4, 0.6, 0.3)</defaultLabelColor>
    <isBad>true</isBad>
    <maxSeverity>1.0</maxSeverity>
    <initialSeverity>0.3</initialSeverity>
    <tendable>true</tendable>
    <chronic>false</chronic>
    <stages>
      <li>
        <label>mild</label>
        <minSeverity>0</minSeverity>
        <statOffsets>
          <CarryingCapacity>-15</CarryingCapacity>
          <RestRateMultiplier>-0.1</RestRateMultiplier>
        </statOffsets>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.1</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>moderate</label>
        <minSeverity>0.5</minSeverity>
        <statOffsets>
          <CarryingCapacity>-25</CarryingCapacity>
          <RestRateMultiplier>-0.2</RestRateMultiplier>
        </statOffsets>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.2</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.1</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>severe</label>
        <minSeverity>0.8</minSeverity>
        <statOffsets>
          <CarryingCapacity>-40</CarryingCapacity>
          <RestRateMultiplier>-0.35</RestRateMultiplier>
        </statOffsets>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.35</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.2</offset>
          </li>
        </capMods>
      </li>
    </stages>
    <comps>
      <li Class="HediffCompProperties_Immunizable">
        <severityPerDayNotImmune>0.08</severityPerDayNotImmune>
        <severityPerDayNotImmuneRandomFactor>0.4</severityPerDayNotImmuneRandomFactor>
        <immunityPerDayNotSick>-0.03</immunityPerDayNotSick>
        <immunityPerDaySick>0.28</immunityPerDaySick>
        <severityPerDayImmune>-0.25</severityPerDayImmune>
      </li>
    </comps>
  </HediffDef>

  <!-- Witbane: Mental affliction affecting intelligence and willpower -->
  <HediffDef>
    <defName>Witbane</defName>
    <label>witbane</label>
    <description>A curse-like disease that clouds the mind and weakens resolve. Scholars and mages are particularly susceptible, as it seems to target those who rely heavily on their mental faculties.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.3, 0.2, 0.4)</defaultLabelColor>
    <isBad>true</isBad>
    <maxSeverity>1.0</maxSeverity>
    <initialSeverity>0.2</initialSeverity>
    <tendable>true</tendable>
    <chronic>false</chronic>
    <stages>
      <li>
        <label>mild</label>
        <minSeverity>0</minSeverity>
        <statOffsets>
          <GlobalLearningFactor>-0.2</GlobalLearningFactor>
          <MentalBreakThreshold>0.08</MentalBreakThreshold>
        </statOffsets>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.05</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>moderate</label>
        <minSeverity>0.5</minSeverity>
        <statOffsets>
          <GlobalLearningFactor>-0.35</GlobalLearningFactor>
          <MentalBreakThreshold>0.15</MentalBreakThreshold>
          <ResearchSpeed>-0.2</ResearchSpeed>
        </statOffsets>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.15</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>severe</label>
        <minSeverity>0.8</minSeverity>
        <statOffsets>
          <GlobalLearningFactor>-0.5</GlobalLearningFactor>
          <MentalBreakThreshold>0.25</MentalBreakThreshold>
          <ResearchSpeed>-0.4</ResearchSpeed>
        </statOffsets>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.3</offset>
          </li>
        </capMods>
      </li>
    </stages>
    <comps>
      <li Class="HediffCompProperties_Immunizable">
        <severityPerDayNotImmune>0.05</severityPerDayNotImmune>
        <severityPerDayNotImmuneRandomFactor>0.25</severityPerDayNotImmuneRandomFactor>
        <immunityPerDayNotSick>-0.02</immunityPerDayNotSick>
        <immunityPerDaySick>0.18</immunityPerDaySick>
        <severityPerDayImmune>-0.15</severityPerDayImmune>
      </li>
    </comps>
  </HediffDef>

  <!-- Wither: Severe multi-system disease -->
  <HediffDef>
    <defName>Wither</defName>
    <label>wither</label>
    <description>A devastating disease that attacks multiple body systems, causing weakness, loss of coordination, and general physical deterioration. One of the most feared ailments in Morrowind.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.5, 0.3, 0.2)</defaultLabelColor>
    <isBad>true</isBad>
    <maxSeverity>1.0</maxSeverity>
    <initialSeverity>0.2</initialSeverity>
    <lethalSeverity>0.95</lethalSeverity>
    <tendable>true</tendable>
    <chronic>false</chronic>
    <stages>
      <li>
        <label>mild</label>
        <minSeverity>0</minSeverity>
        <statOffsets>
          <MoveSpeed>-0.15</MoveSpeed>
          <CarryingCapacity>-15</CarryingCapacity>
        </statOffsets>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.1</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.1</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>moderate</label>
        <minSeverity>0.5</minSeverity>
        <statOffsets>
          <MoveSpeed>-0.3</MoveSpeed>
          <CarryingCapacity>-30</CarryingCapacity>
          <WorkSpeedGlobal>-0.15</WorkSpeedGlobal>
        </statOffsets>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.25</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.2</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.1</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>severe</label>
        <minSeverity>0.8</minSeverity>
        <lifeThreatening>true</lifeThreatening>
        <statOffsets>
          <MoveSpeed>-0.5</MoveSpeed>
          <CarryingCapacity>-50</CarryingCapacity>
          <WorkSpeedGlobal>-0.3</WorkSpeedGlobal>
        </statOffsets>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.4</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.35</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.2</offset>
          </li>
        </capMods>
      </li>
    </stages>
    <comps>
      <li Class="HediffCompProperties_Immunizable">
        <severityPerDayNotImmune>0.03</severityPerDayNotImmune>
        <severityPerDayNotImmuneRandomFactor>0.15</severityPerDayNotImmuneRandomFactor>
        <immunityPerDayNotSick>-0.01</immunityPerDayNotSick>
        <immunityPerDaySick>0.1</immunityPerDaySick>
        <severityPerDayImmune>-0.08</severityPerDayImmune>
      </li>
    </comps>
  </HediffDef>

  <!-- Yellow Tick: Social and physical weakening disease -->
