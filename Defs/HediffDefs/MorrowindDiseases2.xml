<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!-- Droops: Disease affecting strength and willpower -->
  <HediffDef>
    <defName>Droops</defName>
    <label>droops</label>
    <description>A debilitating condition that causes muscles to weaken and the spirit to flag. Victims find themselves unable to exert themselves physically or mentally.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.5, 0.4, 0.4)</defaultLabelColor>
    <isBad>true</isBad>
    <maxSeverity>1.0</maxSeverity>
    <initialSeverity>0.25</initialSeverity>
    <tendable>true</tendable>
    <chronic>false</chronic>
    <stages>
      <li>
        <label>mild</label>
        <minSeverity>0</minSeverity>
        <statOffsets>
          <CarryingCapacity>-10</CarryingCapacity>
          <MentalBreakThreshold>0.05</MentalBreakThreshold>
        </statOffsets>
        <capMods>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.1</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>moderate</label>
        <minSeverity>0.5</minSeverity>
        <statOffsets>
          <CarryingCapacity>-20</CarryingCapacity>
          <MentalBreakThreshold>0.1</MentalBreakThreshold>
        </statOffsets>
        <capMods>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.2</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.1</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>severe</label>
        <minSeverity>0.8</minSeverity>
        <statOffsets>
          <CarryingCapacity>-35</CarryingCapacity>
          <MentalBreakThreshold>0.2</MentalBreakThreshold>
        </statOffsets>
        <capMods>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.35</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.2</offset>
          </li>
        </capMods>
      </li>
    </stages>
    <comps>
      <li Class="HediffCompProperties_Immunizable">
        <severityPerDayNotImmune>0.07</severityPerDayNotImmune>
        <severityPerDayNotImmuneRandomFactor>0.3</severityPerDayNotImmuneRandomFactor>
        <immunityPerDayNotSick>-0.03</immunityPerDayNotSick>
        <immunityPerDaySick>0.25</immunityPerDaySick>
        <severityPerDayImmune>-0.2</severityPerDayImmune>
      </li>
    </comps>
  </HediffDef>

