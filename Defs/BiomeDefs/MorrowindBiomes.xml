<?xml version="1.0" encoding="utf-8"?>
<BiomeDefs>

  <!-- Ashlands - Volcanic wasteland with ash storms -->
  <BiomeDef>
    <defName>Ashlands</defName>
    <label>ashlands</label>
    <description>A desolate volcanic wasteland covered in ash and hostile to most life. The air is thick with volcanic particles, and violent ash storms regularly sweep across the barren landscape. Despite the harsh conditions, some hardy creatures and volcanic plants have adapted to thrive here.</description>
    <workerClass>BiomeWorker_Desert</workerClass>
    <canAutoChoose>true</canAutoChoose>
    <animalDensity>0.3</animalDensity>
    <plantDensity>0.15</plantDensity>
    <settlementSelectionWeight>0.1</settlementSelectionWeight>
    <movementDifficulty>1.2</movementDifficulty>
    <texture>World/Biomes/Desert</texture>
    <wildPlantRegrowDays>40</wildPlantRegrowDays>
    <soundsAmbient>
      <li>Ambient_Wind_Desolate</li>
    </soundsAmbient>
    <baseWeatherCommonalities>
      <Clear>18</Clear>
      <Fog>1</Fog>
      <Rain>2</Rain>
      <DryThunderstorm>3</DryThunderstorm>
      <SnowGentle>0</SnowGentle>
      <SnowHard>0</SnowHard>
    </baseWeatherCommonalities>
    <wildAnimals>
      <Alit>0.3</Alit>
      <Kagouti>0.2</Kagouti>
      <NixHound>0.15</NixHound>
      <Shalk>0.1</Shalk>
    </wildAnimals>
    <wildPlants>
      <PlantAshYam>0.5</PlantAshYam>
      <PlantFirePetal>0.3</PlantFirePetal>
    </wildPlants>
    <terrainsByFertility>
      <li>
        <terrain>Sand</terrain>
        <min>-999</min>
        <max>0.87</max>
      </li>
      <li>
        <terrain>Soil</terrain>
        <min>0.87</min>
        <max>999</max>
      </li>
    </terrainsByFertility>
    <terrainPatchMakers>
      <li>
        <perlinFrequency>0.035</perlinFrequency>
        <thresholds>
          <li>
            <terrain>Sand</terrain>
            <min>0.15</min>
            <max>999</max>
          </li>
        </thresholds>
      </li>
    </terrainPatchMakers>
  </BiomeDef>

  <!-- Bitter Coast - Swampy coastland with fungal forests -->
