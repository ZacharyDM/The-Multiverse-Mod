<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!-- Khajiit Moon Worship Deity Names -->
  <RulePackDef>
    <defName>KhajiitMoonDeityNames</defName>
    <include>
      <li>NamerDeityBase</li>
    </include>
    <rulePack>
      <rulesStrings>
        <!-- Moon deity names -->
        <li>Jone->Jone the Bright</li>
        <li>Jone->Jone the Ever-Watchful</li>
        <li>Jone->Jone the Silver Guide</li>
        <li>Jode->Jode the Swift</li>
        <li>Jode->Jode the Dancing Moon</li>
        <li>Jode->Jode the Night Walker</li>
        
        <!-- Additional lunar spirits -->
        <li>MoonSpirit->Lunar Mother</li>
        <li>MoonSpirit->Night's Eye</li>
        <li>MoonSpirit->Silver Walker</li>
        <li>MoonSpirit->Moon-Sugar Guardian</li>
        <li>MoonSpirit->Bright Jone's Child</li>
        <li>MoonSpirit->Swift Jode's Heir</li>
        
        <!-- Moon phases as deities -->
        <li>PhaseName->New Moon's Secret</li>
        <li>PhaseName->Waxing Moon's Promise</li>
        <li>PhaseName->Full Moon's Glory</li>
        <li>PhaseName->Waning Moon's Wisdom</li>
        
        <!-- Constellation spirits -->
        <li>StarSpirit->The Thief's Moon</li>
        <li>StarSpirit->The Lover's Light</li>
        <li>StarSpirit->The Shadow's Guide</li>
        
        <!-- Final name construction -->
        <li>name->[Jone]</li>
        <li>name->[Jode]</li>
        <li>name->[MoonSpirit]</li>
        <li>name->[PhaseName]</li>
        <li>name->[StarSpirit]</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>

  <!-- Riddle'Thar Epiphany Deity Names -->
