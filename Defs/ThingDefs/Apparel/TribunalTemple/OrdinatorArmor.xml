<Defs>

  <!-- Order of the Watch Armor -->
  <ThingDef ParentName="ArmorMakeableBase">
    <defName>Apparel_OrderWatchArmor</defName>
    <label>Order of the Watch armor</label>
    <description>Distinctive blue and gold armor worn by members of the Order of the Watch, the temple guardians and peacekeepers. Provides solid protection while maintaining mobility for patrols and defensive actions.</description>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/TribunalTemple/OrderWatch/OrderWatch</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>120</costStuffCount>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <thingCategories>
      <li>ApparelArmor</li>
    </thingCategories>
    <statBases>
      <WorkToMake>18000</WorkToMake>
      <MaxHitPoints>280</MaxHitPoints>
      <Mass>12</Mass>
      <Flammability>0.4</Flammability>
      <ArmorRating_Sharp>0.72</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.36</ArmorRating_Blunt>
      <ArmorRating_Heat>0.40</ArmorRating_Heat>
      <Insulation_Cold>8</Insulation_Cold>
      <Insulation_Heat>2</Insulation_Heat>
      <EquipDelay>10</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.05</MoveSpeed>
      <WorkSpeedGlobal>-0.05</WorkSpeedGlobal>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/TribunalTemple/OrderWatch/OrderWatch</wornGraphicPath>
      <layers>
        <li>Middle</li>
      </layers>
      <tags>
        <li>IndustrialMilitaryBasic</li>
        <li>TribunalTempleArmor</li>
        <li>OrderOfTheWatch</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedMetallicTechArmor</unfinishedThingDef>
      <researchPrerequisite>PlateArmor</researchPrerequisite>
      <skillRequirements>
        <Crafting>7</Crafting>
      </skillRequirements>
      <recipeUsers Inherit="False">
        <li>ElectricSmithy</li>
        <li>FueledSmithy</li>
      </recipeUsers>
    </recipeMaker>
  </ThingDef>

