<Defs>

  <!-- High Ordinator Armor -->
  <ThingDef ParentName="ArmorMakeableBase">
    <defName>Apparel_HighOrdinatorArmor</defName>
    <label>High Ordinator armor</label>
    <description>Magnificent golden armor worn by High Ordinators, the elite temple guards who stand above all other orders. This masterwork armor combines divine protection with unmatched craftsmanship, featuring intricate religious symbols and blessed materials.</description>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/TribunalTemple/HighOrdinator/HighOrdinator</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>160</costStuffCount>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <thingCategories>
      <li>ApparelArmor</li>
    </thingCategories>
    <statBases>
      <WorkToMake>30000</WorkToMake>
      <MaxHitPoints>380</MaxHitPoints>
      <Mass>18</Mass>
      <Flammability>0.2</Flammability>
      <ArmorRating_Sharp>0.88</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.50</ArmorRating_Blunt>
      <ArmorRating_Heat>0.55</ArmorRating_Heat>
      <Insulation_Cold>15</Insulation_Cold>
      <Insulation_Heat>5</Insulation_Heat>
      <EquipDelay>15</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.10</MoveSpeed>
      <WorkSpeedGlobal>-0.10</WorkSpeedGlobal>
      <MeleeHitChance>0.10</MeleeHitChance>
      <ShootingAccuracyPawn>0.08</ShootingAccuracyPawn>
      <SocialImpact>0.25</SocialImpact>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/TribunalTemple/HighOrdinator/HighOrdinator</wornGraphicPath>
      <layers>
        <li>Middle</li>
      </layers>
      <tags>
        <li>SpacerMilitary</li>
        <li>TribunalTempleElite</li>
        <li>HighOrdinator</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedMetallicTechArmor</unfinishedThingDef>
      <researchPrerequisite>CataphractArmor</researchPrerequisite>
      <skillRequirements>
        <Crafting>12</Crafting>
      </skillRequirements>
      <recipeUsers Inherit="False">
        <li>FabricationBench</li>
        <li>ElectricSmithy</li>
      </recipeUsers>
    </recipeMaker>
  </ThingDef>

