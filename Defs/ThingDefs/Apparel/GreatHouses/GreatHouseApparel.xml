<Defs>

  <!-- House Redoran Armor -->
  <ThingDef ParentName="ArmorMakeableBase">
    <defName>Apparel_HouseRedoranArmor</defName>
    <label>House Redoran armor</label>
    <description>Traditional armor of House Redoran, the warrior-protectors of Morrowind. This sturdy armor combines functionality with honor, featuring the distinctive crab-shell design and deep red coloring of the martial house.</description>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/GreatHouses/Redoran/Redoran</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>125</costStuffCount>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <thingCategories>
      <li>ApparelArmor</li>
    </thingCategories>
    <statBases>
      <WorkToMake>20000</WorkToMake>
      <MaxHitPoints>290</MaxHitPoints>
      <Mass>13</Mass>
      <Flammability>0.4</Flammability>
      <ArmorRating_Sharp>0.74</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.38</ArmorRating_Blunt>
      <ArmorRating_Heat>0.42</ArmorRating_Heat>
      <Insulation_Cold>9</Insulation_Cold>
      <Insulation_Heat>3</Insulation_Heat>
      <EquipDelay>11</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.06</MoveSpeed>
      <WorkSpeedGlobal>-0.06</WorkSpeedGlobal>
      <MeleeHitChance>0.06</MeleeHitChance>
      <ConstructionSpeed>0.08</ConstructionSpeed>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/GreatHouses/Redoran/Redoran</wornGraphicPath>
      <layers>
        <li>Middle</li>
      </layers>
      <tags>
        <li>IndustrialMilitaryBasic</li>
        <li>HouseRedoran</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedMetallicTechArmor</unfinishedThingDef>
      <researchPrerequisite>PlateArmor</researchPrerequisite>
      <skillRequirements>
        <Crafting>7</Crafting>
      </skillRequirements>
      <recipeUsers Inherit="False">
        <li>ElectricSmithy</li>
        <li>FueledSmithy</li>
      </recipeUsers>
    </recipeMaker>
  </ThingDef>

