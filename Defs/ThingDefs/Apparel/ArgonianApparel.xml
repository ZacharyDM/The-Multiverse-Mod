<ThingDefs>

  <!-- Hist-Bark Armor - Traditional Argonian Armor -->
  <ThingDef ParentName="ArmorHelmetMakeableBase">
    <defName>Apparel_HistBarkHelmet</defName>
    <label>hist-bark helmet</label>
    <description>A traditional Argonian helmet crafted from sacred Hist bark and reinforced with swamp reeds. Provides moderate protection while maintaining the wearer's connection to nature.</description>
    <techLevel>Medieval</techLevel>
    <recipeMaker>
      <researchPrerequisite>ComplexClothing</researchPrerequisite>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
      <recipeUsers>
        <li>CraftingSpot</li>
        <li>TableCrafting</li>
      </recipeUsers>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/HistBarkHelmet/HistBarkHelmet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>40</costStuffCount>
    <stuffCategories>
      <li>Woody</li>
    </stuffCategories>
    <statBases>
      <WorkToMake>8000</WorkToMake>
      <MaxHitPoints>100</MaxHitPoints>
      <Mass>1.5</Mass>
      <ArmorRating_Sharp>0.50</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.25</ArmorRating_Blunt>
      <ArmorRating_Heat>0.15</ArmorRating_Heat>
      <Insulation_Cold>2</Insulation_Cold>
      <EquipDelay>2</EquipDelay>
    </statBases>
    <apparel>
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/HistBarkHelmet/HistBarkHelmet</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>ArgonianApparel</li>
        <li>HistKeepersApparel</li>
      </tags>
    </apparel>
  </ThingDef>

