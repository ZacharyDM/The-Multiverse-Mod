<Defs>

  <!-- Sleeper Robes -->
  <ThingDef ParentName="ApparelMakeableBase">
    <defName>Apparel_SleeperRobes</defName>
    <label>Sleeper robes</label>
    <description>Tattered robes worn by those afflicted with the Corpus disease. These garments show signs of wear and corruption, yet they provide unexpected resilience against the harsh conditions of the blighted ashlands.</description>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/HouseDagoth/Sleeper/Sleeper</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>45</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
    </stuffCategories>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <statBases>
      <WorkToMake>3000</WorkToMake>
      <MaxHitPoints>80</MaxHitPoints>
      <Mass>1.2</Mass>
      <Flammability>0.6</Flammability>
      <ArmorRating_Sharp>0.06</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.03</ArmorRating_Blunt>
      <ArmorRating_Heat>0.40</ArmorRating_Heat>
      <Insulation_Cold>10</Insulation_Cold>
      <Insulation_Heat>15</Insulation_Heat>
      <EquipDelay>2</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <PsychicSensitivity>0.25</PsychicSensitivity>
      <GlobalLearningFactor>0.08</GlobalLearningFactor>
      <SocialImpact>-0.15</SocialImpact>
      <MentalBreakThreshold>0.05</MentalBreakThreshold>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/HouseDagoth/Sleeper/Sleeper</wornGraphicPath>
      <layers>
        <li>Middle</li>
      </layers>
      <tags>
        <li>HouseDagoth</li>
        <li>CorpusClothing</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
    <recipeMaker>
      <researchPrerequisite>ComplexClothing</researchPrerequisite>
      <skillRequirements>
        <Crafting>2</Crafting>
      </skillRequirements>
      <recipeUsers>
        <li>ElectricTailoringBench</li>
        <li>HandTailoringBench</li>
      </recipeUsers>
    </recipeMaker>
  </ThingDef>

