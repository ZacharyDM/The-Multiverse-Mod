<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!-- Dwemeri Engineering Robes -->
  <ThingDef ParentName="ApparelMakeableBase">
    <defName>Apparel_DwemeriEngineeringRobes</defName>
    <label>Dwemeri engineering robes</label>
    <description>Masterfully crafted robes incorporating Dwemer technological principles. The fabric is woven with fine dwarven metal threads that provide both protection and enhanced cognitive function. Built-in analytical instruments assist with complex calculations and engineering work.</description>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/Dwemeri/EngineeringRobes/EngineeringRobes</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>85</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
    </stuffCategories>
    <costList>
      <DwarvenMetalIngot>2</DwarvenMetalIngot>
      <ComponentIndustrial>1</ComponentIndustrial>
    </costList>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <statBases>
      <WorkToMake>18000</WorkToMake>
      <MaxHitPoints>180</MaxHitPoints>
      <Mass>1.2</Mass>
      <Flammability>0.2</Flammability>
      <ArmorRating_Sharp>0.35</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.15</ArmorRating_Blunt>
      <ArmorRating_Heat>0.25</ArmorRating_Heat>
      <Insulation_Cold>18</Insulation_Cold>
      <Insulation_Heat>12</Insulation_Heat>
      <EquipDelay>3</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <ResearchSpeed>0.25</ResearchSpeed>
      <WorkSpeedGlobal>0.15</WorkSpeedGlobal>
      <ConstructionSpeed>0.20</ConstructionSpeed>
      <PlantWorkSpeed>-0.05</PlantWorkSpeed>
      <MiningSpeed>0.10</MiningSpeed>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/Dwemeri/EngineeringRobes/EngineeringRobes</wornGraphicPath>
      <layers>
        <li>Middle</li>
      </layers>
      <tags>
        <li>DwemeriApparel</li>
        <li>IndustrialBasic</li>
      </tags>
    </apparel>
    <recipeMaker>
      <researchPrerequisite>DwemerCrafting</researchPrerequisite>
      <skillRequirements>
        <Crafting>10</Crafting>
      </skillRequirements>
    </recipeMaker>
  </ThingDef>

