<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!-- Anequinan Desert Garb -->
  <ThingDef ParentName="ApparelMakeableBase">
    <defName>Apparel_AnequinanDesertGarb</defName>
    <label>Anequinan desert garb</label>
    <description>Traditional clothing of the northern Elsweyr nomads, designed for survival in harsh desert conditions. These layered garments provide protection from sandstorms while allowing freedom of movement for desert warriors. The earth-toned fabrics help with camouflage in badland terrain.</description>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/Khajiit/Anequinan/DesertGarb</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>40</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <statBases>
      <WorkToMake>4500</WorkToMake>
      <MaxHitPoints>100</MaxHitPoints>
      <Mass>0.8</Mass>
      <Flammability>1.0</Flammability>
      <ArmorRating_Sharp>0.15</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.08</ArmorRating_Blunt>
      <ArmorRating_Heat>0.25</ArmorRating_Heat>
      <Insulation_Cold>12</Insulation_Cold>
      <Insulation_Heat>15</Insulation_Heat>
      <EquipDelay>2</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>0.02</MoveSpeed>
      <HuntingStealth>0.05</HuntingStealth>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/Khajiit/Anequinan/DesertGarb</wornGraphicPath>
      <layers>
        <li>OnSkin</li>
      </layers>
      <tags>
        <li>AnequinanClothing</li>
        <li>KhajiitDesert</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <recipeMaker>
      <researchPrerequisite>ComplexClothing</researchPrerequisite>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
    </recipeMaker>
  </ThingDef>

  <!-- Anequinan Warrior Armor -->
  <ThingDef ParentName="ArmorMakeableBase">
    <defName>Apparel_AnequinanWarriorArmor</defName>
    <label>Anequinan warrior armor</label>
    <description>Traditional armor of the Anequinan desert warriors, crafted from hardened leather and reinforced with metal studs. The design emphasizes mobility and stealth while providing adequate protection for tribal combat. Desert-colored patterns help with camouflage during raids.</description>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/Khajiit/Anequinan/WarriorArmor</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>80</costStuffCount>
    <stuffCategories>
      <li>Leathery</li>
      <li>Metallic</li>
    </stuffCategories>
    <thingCategories>
      <li>ApparelArmor</li>
    </thingCategories>
    <statBases>
      <WorkToMake>12000</WorkToMake>
      <MaxHitPoints>200</MaxHitPoints>
      <Mass>7</Mass>
      <Flammability>0.6</Flammability>
      <ArmorRating_Sharp>0.52</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.26</ArmorRating_Blunt>
      <ArmorRating_Heat>0.35</ArmorRating_Heat>
      <Insulation_Cold>8</Insulation_Cold>
      <Insulation_Heat>12</Insulation_Heat>
      <EquipDelay>6</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>0.05</MoveSpeed>
      <HuntingStealth>0.08</HuntingStealth>
      <MeleeHitChance>0.02</MeleeHitChance>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/Khajiit/Anequinan/WarriorArmor</wornGraphicPath>
      <layers>
        <li>Middle</li>
      </layers>
      <tags>
        <li>AnequinanArmor</li>
        <li>KhajiitWarrior</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedMetallicTechArmor</unfinishedThingDef>
      <researchPrerequisite>PlateArmor</researchPrerequisite>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
      <recipeUsers Inherit="False">
        <li>ElectricSmithy</li>
        <li>FueledSmithy</li>
      </recipeUsers>
    </recipeMaker>
  </ThingDef>

