<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!-- Quadrupedal Khajiit Base Apparel -->
  <!-- This is specifically designed for non-bipedal Khajiit breeds -->

  <!-- Alfiq Magical Collar -->
  <ThingDef ParentName="ApparelMakeableBase">
    <defName>Apparel_AlfiqMagicalCollar</defName>
    <label>Alfiq magical collar</label>
    <description>A specialized collar designed for the small, cat-like Alfiq Khajiit. Embedded with arcane focusing crystals, this collar enhances the natural magical abilities of these diminutive but powerful spellcasters. The delicate construction accommodates their small stature while amplifying their psychic sensitivity.</description>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/Khajiit/Quadrupedal/AlfiqCollar</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>25</costStuffCount>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <statBases>
      <WorkToMake>3000</WorkToMake>
      <MaxHitPoints>50</MaxHitPoints>
      <Mass>0.3</Mass>
      <Flammability>0.2</Flammability>
      <ArmorRating_Sharp>0.05</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.02</ArmorRating_Blunt>
      <ArmorRating_Heat>0.10</ArmorRating_Heat>
      <EquipDelay>1</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <PsychicSensitivity>0.25</PsychicSensitivity>
      <PsychicEntropyRecoveryRate>0.15</PsychicEntropyRecoveryRate>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>Neck</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/Khajiit/Quadrupedal/AlfiqCollar</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>AlfiqOnly</li>
        <li>KhajiitMagical</li>
      </tags>
      <allowedRaces>
        <li>KhajiitAlfiq</li>
        <li>KhajiitAlfiqRaht</li>
      </allowedRaces>
    </apparel>
    <recipeMaker>
      <researchPrerequisite>Smithing</researchPrerequisite>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
    </recipeMaker>
  </ThingDef>

  <!-- Dagi Scout Harness -->
  <ThingDef ParentName="ApparelMakeableBase">
    <defName>Apparel_DagiScoutHarness</defName>
    <label>Dagi scout harness</label>
    <description>A lightweight harness designed for the agile, tree-dwelling Dagi Khajiit. This specialized equipment includes climbing aids, stealth enhancements, and storage for scouting gear. The flexible design doesn't restrict their natural climbing abilities while providing protection and utility.</description>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/Khajiit/Quadrupedal/DagiHarness</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>35</costStuffCount>
    <stuffCategories>
      <li>Leathery</li>
      <li>Fabric</li>
    </stuffCategories>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <statBases>
      <WorkToMake>4000</WorkToMake>
      <MaxHitPoints>80</MaxHitPoints>
      <Mass>0.8</Mass>
      <Flammability>0.8</Flammability>
      <ArmorRating_Sharp>0.12</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.06</ArmorRating_Blunt>
      <ArmorRating_Heat>0.08</ArmorRating_Heat>
      <EquipDelay>3</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>0.15</MoveSpeed>
      <HuntingStealth>0.20</HuntingStealth>
      <CarryingCapacity>15</CarryingCapacity>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/Khajiit/Quadrupedal/DagiHarness</wornGraphicPath>
