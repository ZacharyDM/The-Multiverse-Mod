<ThingDefs>

  <!-- Hist-Wood Spear - Traditional Argonian Weapon -->
  <ThingDef ParentName="BaseMeleeWeapon_Sharp_Quality">
    <defName>MeleeWeapon_HistWoodSpear</defName>
    <label>hist-wood spear</label>
    <description>A traditional Argonian spear carved from sacred Hist wood and tipped with sharpened bone or metal. The wood is naturally resistant to rot and enhances the wielder's connection to nature.</description>
    <techLevel>Medieval</techLevel>
    <recipeMaker>
      <researchPrerequisite>LongBlades</researchPrerequisite>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
      <recipeUsers>
        <li>FueledSmithy</li>
        <li>ElectricSmithy</li>
      </recipeUsers>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponMelee/HistWoodSpear</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <uiIconPath>Things/Item/Equipment/WeaponMelee/HistWoodSpear</uiIconPath>
    <costStuffCount>100</costStuffCount>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
    </stuffCategories>
    <statBases>
      <WorkToMake>10000</WorkToMake>
      <Mass>3.5</Mass>
    </statBases>
    <equippedStatOffsets>
      <ToxicResistance>0.05</ToxicResistance>
    </equippedStatOffsets>
    <tools>
      <li>
        <label>shaft</label>
        <capacities>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2.0</cooldownTime>
      </li>
      <li>
        <label>point</label>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>22</power>
        <cooldownTime>2.6</cooldownTime>
        <armorPenetration>0.25</armorPenetration>
      </li>
    </tools>
    <weaponTags>
      <li>ArgonianWeapon</li>
      <li>HistKeepersWeapon</li>
    </weaponTags>
  </ThingDef>

