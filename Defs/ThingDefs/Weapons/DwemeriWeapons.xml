      <texPath>Things/Item/Equipment/WeaponRanged/DwemeriCrossbow</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <uiIconPath>Things/Item/Equipment/WeaponRanged/DwemeriCrossbow</uiIconPath>
    <soundInteract>Interact_Rifle</soundInteract>
    <costList>
      <DwarvenMetalIngot>3</DwarvenMetalIngot>
      <WoodLog>25</WoodLog>
      <ComponentIndustrial>2</ComponentIndustrial>
    </costList>
    <statBases>
      <WorkToMake>15000</WorkToMake>
      <Mass>2.8</Mass>
      <AccuracyTouch>0.75</AccuracyTouch>
      <AccuracyShort>0.85</AccuracyShort>
