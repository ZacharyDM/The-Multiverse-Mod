        <daysToDessicated>45</daysToDessicated>
        <rotDestroys>true</rotDestroys>
      </li>
    </comps>
  </ThingDef>

  <!-- Ash Yam: Hardy tuber -->
  <ThingDef ParentName="PlantBase">
    <defName>PlantAshYam</defName>
    <label>ash yam</label>
