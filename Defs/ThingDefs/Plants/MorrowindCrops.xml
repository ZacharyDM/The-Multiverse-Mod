      <MaxHitPoints>140</MaxHitPoints>
      <Nutrition>0.07</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Plant/AshYam</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <selectable>true</selectable>
    <pathCost>8</pathCost>
    <ingestible />
    <plant>
      <fertilityMin>0.3</fertilityMin>
      <fertilitySensitivity>0.2</fertilitySensitivity>
      <growDays>12</growDays>
      <leaflessGraphicPath>Things/Plant/AshYam_Leafless</leaflessGraphicPath>
      <harvestWork>250</harvestWork>
      <harvestTag>Standard</harvestTag>
      <harvestAfterGrowth>0.35</harvestAfterGrowth>
      <harvestMinGrowth>0.75</harvestMinGrowth>
      <harvestYield>25</harvestYield>
      <harvestFailable>false</harvestFailable>
      <sowMinSkill>5</sowMinSkill>
      <sowTags>
        <li>Ground</li>
      </sowTags>
      <sowResearchPrerequisites>
        <li>Agriculture</li>
      </sowResearchPrerequisites>
      <topWindExposure>0.02</topWindExposure>
      <visualSizeRange>0.2~1.5</visualSizeRange>
      <wildOrder>1</wildOrder>
      <purpose>Food</purpose>
