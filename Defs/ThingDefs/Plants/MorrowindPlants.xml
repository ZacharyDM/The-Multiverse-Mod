      </sowTags>
      <topWindExposure>0.3</topWindExposure>
      <visualSizeRange>0.4~0.8</visualSizeRange>
      <wildOrder>1</wildOrder>
      <purpose>Beauty</purpose>
      <humanDamageMultiplier>4</humanDamageMultiplier>
