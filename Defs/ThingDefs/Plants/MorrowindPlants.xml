  <!-- Gold Kanet: Ornamental flower -->
  <ThingDef ParentName="PlantBase">
    <defName>PlantGoldKanet</defName>
    <label>gold kanet</label>
    <description>A beautiful golden flower native to Morrowind. Gold kanet is prized both for its ornamental value and its alchemical properties. The bright golden petals are said to have restorative qualities.</description>
    <statBases>
      <MaxHitPoints>60</MaxHitPoints>
      <Beauty>20</Beauty>
      <Nutrition>0.02</Nutrition>
    </statBases>
