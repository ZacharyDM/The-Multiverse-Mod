<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!-- Gold Kanet: Ornamental flower -->
  <ThingDef ParentName="PlantBase">
    <defName>PlantGoldKanet</defName>
    <label>gold kanet</label>
    <description>A beautiful golden flower native to Morrowind. Gold kanet is prized both for its ornamental value and its alchemical properties. The bright golden petals are said to have restorative qualities.</description>
    <statBases>
      <MaxHitPoints>60</MaxHitPoints>
      <Beauty>20</Beauty>
      <Nutrition>0.02</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Plant/GoldKanet</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <selectable>true</selectable>
    <pathCost>14</pathCost>
    <ingestible />
    <plant>
      <fertilityMin>0.6</fertilityMin>
      <fertilitySensitivity>0.6</fertilitySensitivity>
      <growDays>8</growDays>
      <leaflessGraphicPath>Things/Plant/GoldKanet_Leafless</leaflessGraphicPath>
      <harvestWork>120</harvestWork>
      <harvestTag>Standard</harvestTag>
      <harvestAfterGrowth>0.20</harvestAfterGrowth>
      <harvestMinGrowth>0.50</harvestMinGrowth>
      <harvestYield>6</harvestYield>
      <harvestFailable>false</harvestFailable>
      <sowMinSkill>3</sowMinSkill>
      <sowTags>
        <li>Ground</li>
        <li>Decorative</li>
      </sowTags>
      <topWindExposure>0.3</topWindExposure>
      <visualSizeRange>0.4~0.8</visualSizeRange>
      <wildOrder>1</wildOrder>
      <purpose>Beauty</purpose>
      <humanDamageMultiplier>4</humanDamageMultiplier>
    </plant>
  </ThingDef>

  <!-- Gold Kanet Flowers -->
  <ThingDef ParentName="ResourceBase">
    <defName>GoldKanetFlowers</defName>
    <label>gold kanet flowers</label>
    <description>Bright golden flowers with mild alchemical properties. Often used in potions and remedies, or simply kept for their beauty and pleasant fragrance.</description>
    <graphicData>
      <texPath>Things/Item/Resource/GoldKanetFlowers</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MaxHitPoints>60</MaxHitPoints>
      <MarketValue>3.5</MarketValue>
      <Mass>0.02</Mass>
      <Flammability>1.3</Flammability>
      <DeteriorationRate>6</DeteriorationRate>
      <Beauty>1</Beauty>
    </statBases>
    <thingCategories>
      <li>PlantMatter</li>
    </thingCategories>
    <ingestible>
      <nutrition>0.02</nutrition>
      <preferability>DesperateOnly</preferability>
      <foodType>VegetableOrFruit</foodType>
    </ingestible>
  </ThingDef>

  <!-- Fire Petal: Volcanic flower -->
  <ThingDef ParentName="PlantBase">
    <defName>PlantFirePetal</defName>
    <label>fire petal</label>
    <description>A hardy flower that grows near volcanic vents and lava flows. Fire petals have adapted to extreme heat and are valued for their resistance-enhancing alchemical properties.</description>
    <statBases>
      <MaxHitPoints>90</MaxHitPoints>
      <Beauty>15</Beauty>
      <Nutrition>0.01</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Plant/FirePetal</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <selectable>true</selectable>
    <pathCost>14</pathCost>
    <ingestible />
    <plant>
      <fertilityMin>0.4</fertilityMin>
      <fertilitySensitivity>0.3</fertilitySensitivity>
      <growDays>6</growDays>
      <leaflessGraphicPath>Things/Plant/FirePetal_Leafless</leaflessGraphicPath>
      <harvestWork>100</harvestWork>
      <harvestTag>Standard</harvestTag>
      <harvestAfterGrowth>0.20</harvestAfterGrowth>
      <harvestMinGrowth>0.40</harvestMinGrowth>
      <harvestYield>4</harvestYield>
      <harvestFailable>false</harvestFailable>
      <sowMinSkill>4</sowMinSkill>
      <sowTags>
        <li>Ground</li>
      </sowTags>
      <topWindExposure>0.4</topWindExposure>
      <visualSizeRange>0.3~0.7</visualSizeRange>
      <wildOrder>1</wildOrder>
      <purpose>Beauty</purpose>
      <humanDamageMultiplier>4</humanDamageMultiplier>
    </plant>
  </ThingDef>

  <!-- Fire Petal Flowers -->
  <ThingDef ParentName="ResourceBase">
    <defName>FirePetalFlowers</defName>
    <label>fire petal flowers</label>
    <description>Vibrant red-orange flowers that grow near volcanic activity. Known for their heat-resistant properties and use in fire resistance potions.</description>
