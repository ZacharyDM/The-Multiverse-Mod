      <li>PlantMatter</li>
    </thingCategories>
    <ingestible>
      <nutrition>0.01</nutrition>
      <preferability>DesperateOnly</preferability>
      <foodType>VegetableOrFruit</foodType>
    </ingestible>
  </ThingDef>

  <!-- Hackle-Lo Leaf: Medicinal plant -->
  <ThingDef ParentName="PlantBase">
    <defName>PlantHackleLoLeaf</defName>
    <label>hackle-lo</label>
    <description>A medicinal plant with broad leaves that are highly valued by healers and alchemists. Hackle-lo leaves are known for their healing properties and ability to cure various ailments.</description>
    <statBases>
      <MaxHitPoints>70</MaxHitPoints>
      <Beauty>8</Beauty>
      <Nutrition>0.03</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Plant/HackleLoLeaf</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <selectable>true</selectable>
    <pathCost>12</pathCost>
    <ingestible />
    <plant>
      <fertilityMin>0.7</fertilityMin>
      <fertilitySensitivity>0.5</fertilitySensitivity>
      <growDays>9</growDays>
      <leaflessGraphicPath>Things/Plant/HackleLoLeaf_Leafless</leaflessGraphicPath>
      <harvestWork>140</harvestWork>
      <harvestTag>Standard</harvestTag>
      <harvestAfterGrowth>0.25</harvestAfterGrowth>
      <harvestMinGrowth>0.60</harvestMinGrowth>
      <harvestYield>8</harvestYield>
      <harvestFailable>false</harvestFailable>
      <sowMinSkill>5</sowMinSkill>
      <sowTags>
        <li>Ground</li>
      </sowTags>
      <sowResearchPrerequisites>
        <li>Agriculture</li>
      </sowResearchPrerequisites>
      <topWindExposure>0.2</topWindExposure>
      <visualSizeRange>0.5~1.0</visualSizeRange>
      <wildOrder>1</wildOrder>
      <purpose>Health</purpose>
      <humanDamageMultiplier>3</humanDamageMultiplier>
    </plant>
  </ThingDef>

  <!-- Hackle-Lo Leaf Medicine -->
  <ThingDef ParentName="ResourceBase">
    <defName>HackleLoLeaf</defName>
    <label>hackle-lo leaf</label>
    <description>Fresh hackle-lo leaves, prized for their medicinal properties. Can be used to treat wounds and illnesses, or processed into more potent healing compounds.</description>
    <graphicData>
      <texPath>Things/Item/Resource/HackleLoLeaf</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MaxHitPoints>80</MaxHitPoints>
      <MarketValue>6.0</MarketValue>
      <Mass>0.03</Mass>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>4</DeteriorationRate>
    </statBases>
    <thingCategories>
      <li>PlantMatter</li>
    </thingCategories>
    <ingestible>
      <nutrition>0.03</nutrition>
      <preferability>DesperateOnly</preferability>
      <foodType>VegetableOrFruit</foodType>
    </ingestible>
    <comps>
      <li Class="CompProperties_Rottable">
        <daysToRotStart>20</daysToRotStart>
        <daysToDessicated>40</daysToDessicated>
        <rotDestroys>true</rotDestroys>
      </li>
    </comps>
  </ThingDef>

