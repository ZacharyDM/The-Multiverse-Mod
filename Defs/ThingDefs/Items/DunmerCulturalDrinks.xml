<Defs>

  <!-- Sujamma - Traditional Dunmer strong alcoholic drink -->
  <ThingDef ParentName="ResourceBase">
    <defName>Sujamma</defName>
    <label>sujamma</label>
    <description>A potent alcoholic beverage beloved by the Dunmer people. This strong drink is fermented from local ingredients and has a distinctive bitter taste that pairs well with traditional Dunmer cuisine. Consuming sujamma provides courage but can impair judgment.</description>
    <graphicData>
      <texPath>Things/Item/Drug/Sujamma</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <rotatable>false</rotatable>
    <stackLimit>25</stackLimit>
    <statBases>
      <MaxHitPoints>60</MaxHitPoints>
      <MarketValue>18</MarketValue>
      <Mass>0.8</Mass>
      <Flammability>0.5</Flammability>
      <Nutrition>0.08</Nutrition>
    </statBases>
    <ingestible>
      <nutrition>0.08</nutrition>
      <baseIngestTicks>800</baseIngestTicks>
      <chairSearchRadius>25</chairSearchRadius>
      <preferability>ProcessedFood</preferability>
      <tasteThought>DrankSujamma</tasteThought>
      <nurseable>true</nurseable>
      <drugCategory>Social</drugCategory>
      <ingestSound>Ingest_Drink</ingestSound>
      <ingestHoldUsesTable>false</ingestHoldUsesTable>
      <ingestCommandString>Drink {0}</ingestCommandString>
      <ingestReportString>Drinking {0}.</ingestReportString>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>Alcohol</hediffDef>
          <severity>0.18</severity>
          <toleranceChemical>Alcohol</toleranceChemical>
        </li>
      </outcomeDoers>
    </ingestible>
    <techLevel>Medieval</techLevel>
    <thingCategories>
      <li>Drugs</li>
    </thingCategories>
    <comps>
      <li Class="CompProperties_Rottable">
        <daysToRotStart>300</daysToRotStart>
        <daysToDessicated>600</daysToDessicated>
      </li>
    </comps>
    <tradeTags>
      <li>BasicItems</li>
      
    </tradeTags>
  </ThingDef>

