<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!-- Netch Leather: Unique leather from flying creatures -->
  <ThingDef ParentName="ResourceBase">
    <defName>NetchLeather</defName>
    <label>netch leather</label>
    <description>Tough, flexible leather harvested from netch. This unique hide is naturally resistant to electrical damage and is prized for creating protective gear and magical items.</description>
    <graphicData>
      <texPath>Things/Item/Resource/NetchLeather</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <stackLimit>75</stackLimit>
    <statBases>
      <MarketValue>3.5</MarketValue>
      <Mass>0.03</Mass>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>2</DeteriorationRate>
    </statBases>
    <thingCategories>
      <li>Leathers</li>
    </thingCategories>
    <stuffProps>
      <categories>
        <li>Leathery</li>
      </categories>
      <commonality>0.20</commonality>
      <statOffsets>
        <WorkToMake>280</WorkToMake>
      </statOffsets>
      <statFactors>
        <MaxHitPoints>1.4</MaxHitPoints>
        <ArmorRating_Blunt>1.0</ArmorRating_Blunt>
        <ArmorRating_Sharp>1.0</ArmorRating_Sharp>
        <Insulation_Cold>0.16</Insulation_Cold>
        <Insulation_Heat>0.16</Insulation_Heat>
      </statFactors>
    </stuffProps>
  </ThingDef>

  <!-- Kwama Egg: Nutritious insect eggs -->
  <ThingDef ParentName="ResourceBase">
    <defName>KwamaEgg</defName>
    <label>kwama egg</label>
    <description>A large, nutritious egg from kwama workers. These eggs are both an excellent food source and a key ingredient in restoration and stamina potions.</description>
    <graphicData>
      <texPath>Things/Item/Resource/KwamaEgg</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <stackLimit>25</stackLimit>
    <statBases>
      <MarketValue>8.0</MarketValue>
      <Mass>0.2</Mass>
      <Flammability>1.2</Flammability>
      <DeteriorationRate>6</DeteriorationRate>
      <Nutrition>0.25</Nutrition>
    </statBases>
    <thingCategories>
      <li>EggsUnfertilized</li>
    </thingCategories>
    <ingestible>
      <nutrition>0.25</nutrition>
      <preferability>RawTasty</preferability>
      <foodType>AnimalProduct</foodType>
      <ingestEffect>EatVegetarian</ingestEffect>
      <ingestSound>RawMeat_Eat</ingestSound>
    </ingestible>
    <comps>
      <li Class="CompProperties_Rottable">
        <daysToRotStart>14</daysToRotStart>
        <daysToDessicated>28</daysToDessicated>
        <rotDestroys>true</rotDestroys>
      </li>
    </comps>
  </ThingDef>

