<Defs>

  <!-- Health Potion -->
  <ThingDef ParentName="DrugBase">
    <defName>HealthPotion</defName>
    <label>health potion</label>
    <description>A crimson potion that rapidly restores health when consumed. Made from healing herbs and alchemical compounds, it accelerates the body's natural healing processes.</description>
    <descriptionHyperlinks>
      <HediffDef>RestoreHealthEffect</HediffDef>
    </descriptionHyperlinks>
    <graphicData>
      <texPath>Things/Item/Drug/HealthPotion</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <rotatable>false</rotatable>
    <statBases>
      <WorkToMake>600</WorkToMake>
      <MarketValue>35</MarketValue>
      <Mass>0.2</Mass>
    </statBases>
    <techLevel>Medieval</techLevel>
    <ingestible>
      <drugCategory>Medical</drugCategory>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>RestoreHealthEffect</hediffDef>
          <severity>1.0</severity>
        </li>
      </outcomeDoers>
    </ingestible>
    <recipeMaker>
      <researchPrerequisite>DrugProduction</researchPrerequisite>
      <recipeUsers>
        <li>AlchemyLab</li>
      </recipeUsers>
      <skillRequirements>
        <Intellectual>5</Intellectual>
      </skillRequirements>
    </recipeMaker>
    <costList>
      <HackleLoLeaf>2</HackleLoLeaf>
      <TramaRoot>1</TramaRoot>
    </costList>
    <comps>
      <li Class="CompProperties_Drug">
        <listOrder>1000</listOrder>
        <overdoseSeverityOffset>0.08~0.14</overdoseSeverityOffset>
      </li>
    </comps>
  </ThingDef>

