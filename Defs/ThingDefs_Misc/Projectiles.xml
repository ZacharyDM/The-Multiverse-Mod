<?xml version="1.0" encoding="utf-8"?>
<ThingDefs>
  <!-- Projectiles -->
  <ThingDef ParentName="BaseBullet">
    <defName>BlasterBolt</defName>
    <label>blaster bolt</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <color>(255, 100, 100)</color>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>12</damageAmountBase>
      <speed>70</speed>
      <extraDamages>
        <li>
          <def>Flame</def>
          <amount>2</amount>
          <chance>0.1</chance>
        </li>
      </extraDamages>
    </projectile>
  </ThingDef>

  <ThingDef ParentName="BaseWeapon">
    <defName>DwarvenSpiderWeapon</defName>
    <label>dwarven spider weapon</label>
    <description>Built-in weapon system of a Dwarven Spider automaton.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/ChargeRifle</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <color>(0.7, 0.6, 0.4)</color>
    </graphicData>
    <soundInteract>Interact_ChargeRifle</soundInteract>
    <menuHidden>true</menuHidden>
    <destroyOnDrop>true</destroyOnDrop>
    <tradeability>None</tradeability>
    <weaponTags>
      <li>TurretGun</li>
    </weaponTags>
    <statBases>
      <AccuracyTouch>0.70</AccuracyTouch>
      <AccuracyShort>0.85</AccuracyShort>
      <AccuracyMedium>0.75</AccuracyMedium>
      <AccuracyLong>0.60</AccuracyLong>
      <RangedWeapon_Cooldown>2.0</RangedWeapon_Cooldown>
      <DeteriorationRate>0</DeteriorationRate>
      <Mass>5</Mass>
      <Flammability>0</Flammability>
    </statBases>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>DwarvenBolt</defaultProjectile>
        <warmupTime>0</warmupTime>
        <range>28</range>
        <ticksBetweenBurstShots>8</ticksBetweenBurstShots>
        <burstShotCount>3</burstShotCount>
        <soundCast>Shot_ChargeRifle</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
        <consumeFuelPerShot>1</consumeFuelPerShot>
      </li>
    </verbs>
  </ThingDef>

  <ThingDef ParentName="BaseBullet">
    <defName>DwarvenBolt</defName>
    <label>dwarven bolt</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <color>(200, 180, 120)</color>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>15</damageAmountBase>
      <speed>55</speed>
      <armorPenetrationBase>0.15</armorPenetrationBase>
    </projectile>
  </ThingDef>

  <!-- Recipe Definitions -->
  <RecipeDef>
    <defName>Make_Lightsaber</defName>
    <label>craft lightsaber</label>
    <description>Craft an elegant lightsaber using kyber crystals and advanced materials.</description>
    <jobString>Crafting lightsaber.</jobString>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>25000</workAmount>
    <targetCountAdjustment>1</targetCountAdjustment>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
        <count>50</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Plasteel</li>
          </thingDefs>
        </filter>
        <count>25</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>ComponentSpacer</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>KyberCrystal</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <products>
      <Lightsaber>1</Lightsaber>
    </products>
    <skillRequirements>
      <Crafting>12</Crafting>
    </skillRequirements>
  </RecipeDef>

  <RecipeDef>
    <defName>Make_DaedricSword</defName>
    <label>forge daedric sword</label>
    <description>Forge a daedric sword using dark magic and ebony.</description>
    <jobString>Forging daedric sword.</jobString>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Smelt</effectWorking>
    <soundWorking>Recipe_Smelt</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>35000</workAmount>
    <targetCountAdjustment>1</targetCountAdjustment>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
        <count>80</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Plasteel</li>
          </thingDefs>
        </filter>
        <count>40</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Gold</li>
          </thingDefs>
        </filter>
        <count>15</count>
      </li>
    </ingredients>
    <products>
      <DaedricSword>1</DaedricSword>
    </products>
    <skillRequirements>
      <Crafting>15</Crafting>
    </skillRequirements>
  </RecipeDef>
</ThingDefs>