<Defs>
  <!-- Bosmer Building Style Mappings -->

  <!-- Tree Dancer Building Style -->
  <StyleItemCategoryDef>
    <defName>TreeDancerBuildingStyle</defName>
    <label>Tree Dancer architecture</label>
    <description>Canopy-integrated structures built around and within living trees, featuring organic curves, suspended walkways, and designs that work with natural tree growth patterns rather than against them.</description>
    <category>TreeDancerStyle</category>
    <thingDefStyles>
      <Wall>TreeDancerWall</Wall>
      <Door>TreeDancerDoor</Door>
      <Bed>TreeDancerBed</Bed>
      <Table2x2c>TreeDancerTable</Table2x2c>
      <DiningChair>TreeDancerChair</DiningChair>
      <Shelf>TreeDancerShelf</Shelf>
      <Dresser>TreeDancerDresser</Dresser>
      <EndTable>TreeDancerEndTable</EndTable>
      <PlantPot>TreeDancerPlanter</PlantPot>
      <Campfire>TreeDancerHearth</Campfire>
      <TorchLamp>TreeDancerTorch</TorchLamp>
      <StandingLamp_Red>TreeDancerLamp</StandingLamp_Red>
    </thingDefStyles>
  </StyleItemCategoryDef>

