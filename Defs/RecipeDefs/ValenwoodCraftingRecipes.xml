  <!-- Craft Yew Bow -->
  <RecipeDef>
    <defName>CraftYewBow</defName>
    <label>craft yew bow</label>
    <description>Craft a superior bow from sacred yew wood using traditional Bosmer techniques passed down through generations.</description>
    <jobString>Crafting yew bow.</jobString>
    <workAmount>2500</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <efficiencyStat>GeneralLaborSpeed</efficiencyStat>
    <soundWorking>Recipe_Machining</soundWorking>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>YewWood</li>
          </thingDefs>
        </filter>
        <count>12</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>SpiderSilk</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
    </ingredients>
    <products>
      <Bow_Recurve>1</Bow_Recurve>
    </products>
    <skillRequirements>
      <Crafting>8</Crafting>
