    <jobString>Processing spider silk.</jobString>
    <workAmount>1500</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <efficiencyStat>GeneralLaborSpeed</efficiencyStat>
    <soundWorking>Recipe_Tailor</soundWorking>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>ForestSpider</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <products>
      <SpiderSilk>3</SpiderSilk>
    </products>
    <skillRequirements>
      <Crafting>6</Crafting>
      <Animals>4</Animals>
    </skillRequirements>
    <workSkill>Crafting</workSkill>
    <recipeUsers>
      <li>HandTailoringBench</li>
      <li>ElectricTailoringBench</li>
    </recipeUsers>
