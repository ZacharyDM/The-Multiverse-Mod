<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- Valenwood Resource Crafting Recipes -->

  <!-- Process Wild Game Meat -->
  <RecipeDef>
    <defName>ProcessWildGameMeat</defName>
    <label>process wild game meat</label>
    <description>Process raw wild game meat into preserved portions suitable for long-term storage.</description>
    <jobString>Processing wild game meat.</jobString>
    <workAmount>800</workAmount>
    <workSpeedStat>CookSpeed</workSpeedStat>
    <efficiencyStat>CookSpeed</efficiencyStat>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>WildGameMeat</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li>
      <li>
        <filter>
          <categories>
            <li>PlantFoodRaw</li>
          </categories>
        </filter>
        <count>2</count>
      </li>
    </ingredients>
    <products>
      <MealSurvivalPack>3</MealSurvivalPack>
    </products>
    <skillRequirements>
      <Cooking>3</Cooking>
    </skillRequirements>
    <workSkill>Cooking</workSkill>
    <recipeUsers>
      <li>FueledStove</li>
      <li>ElectricStove</li>
      <li>Campfire</li>
    </recipeUsers>
    <researchPrerequisite>ComplexFurniture</researchPrerequisite>
  </RecipeDef>

  <!-- Craft Forest Herb Medicine -->
  <RecipeDef>
    <defName>CraftForestHerbMedicine</defName>
    <label>craft herbal medicine</label>
    <description>Process forest herbs into basic medicine using traditional Bosmer knowledge.</description>
    <jobString>Crafting herbal medicine.</jobString>
    <workAmount>1200</workAmount>
    <workSpeedStat>DrugCookingSpeed</workSpeedStat>
    <efficiencyStat>DrugCookingSpeed</efficiencyStat>
    <soundWorking>Recipe_Drug</soundWorking>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>ForestHerbs</li>
          </thingDefs>
        </filter>
        <count>3</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>TreeSap</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <products>
      <MedicineHerbal>2</MedicineHerbal>
    </products>
    <skillRequirements>
      <Medicine>4</Medicine>
      <Intellectual>2</Intellectual>
    </skillRequirements>
    <workSkill>Medicine</workSkill>
    <recipeUsers>
      <li>DrugLab</li>
      <li>Campfire</li>
    </recipeUsers>
    <researchPrerequisite>HerbalMedicine</researchPrerequisite>
  </RecipeDef>

  <!-- Refine Tree Sap -->
  <RecipeDef>
    <defName>RefineTreeSap</defName>
    <label>refine tree sap</label>
    <description>Refine raw tree sap into a versatile crafting adhesive.</description>
    <jobString>Refining tree sap.</jobString>
    <workAmount>600</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <efficiencyStat>GeneralLaborSpeed</efficiencyStat>
    <soundWorking>Recipe_Machining</soundWorking>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>TreeSap</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
    </ingredients>
    <products>
      <Chemfuel>1</Chemfuel>
    </products>
    <skillRequirements>
      <Crafting>3</Crafting>
    </skillRequirements>
    <workSkill>Crafting</workSkill>
    <recipeUsers>
      <li>TableMachining</li>
      <li>FabricationBench</li>
    </recipeUsers>
    <researchPrerequisite>BiofuelRefining</researchPrerequisite>
  </RecipeDef>

  <!-- Weave Plant Fibers -->
  <RecipeDef>
    <defName>WeavePlantFibers</defName>
    <label>weave plant fibers</label>
    <description>Weave raw plant materials and bark into durable textile fibers using traditional Bosmer techniques.</description>
    <jobString>Weaving plant fibers.</jobString>
    <workAmount>1000</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <efficiencyStat>GeneralLaborSpeed</efficiencyStat>
    <soundWorking>Recipe_Tailor</soundWorking>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>PlantMatter</li>
          </categories>
        </filter>
        <count>8</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>TreeSap</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <products>
      <WovenFibers>4</WovenFibers>
    </products>
    <skillRequirements>
      <Crafting>5</Crafting>
      <Artistic>2</Artistic>
    </skillRequirements>
    <workSkill>Crafting</workSkill>
    <recipeUsers>
      <li>HandTailoringBench</li>
      <li>ElectricTailoringBench</li>
    </recipeUsers>
    <researchPrerequisite>ComplexClothing</researchPrerequisite>
  </RecipeDef>

  <!-- Process Spider Silk -->
