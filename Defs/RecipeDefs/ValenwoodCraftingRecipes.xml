  <!-- Harvest Forest Herbs -->
  <RecipeDef>
    <defName>HarvestForestHerbs</defName>
    <label>harvest forest herbs</label>
    <description>Carefully gather medicinal herbs from wild forest plants without harming the living plants themselves.</description>
    <jobString>Harvesting forest herbs.</jobString>
    <workAmount>400</workAmount>
    <workSpeedStat>PlantHarvestYield</workSpeedStat>
    <efficiencyStat>PlantHarvestYield</efficiencyStat>
    <soundWorking>Interact_Tend</soundWorking>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>PlantMatter</li>
          </categories>
        </filter>
        <count>3</count>
      </li>
    </ingredients>
    <products>
      <ForestHerbs>2</ForestHerbs>
    </products>
    <skillRequirements>
      <Plants>4</Plants>
      <Medicine>2</Medicine>
    </skillRequirements>
    <workSkill>Plants</workSkill>
    <recipeUsers>
      <li>PlantProcessingTable</li>
      <li>CraftingSpot</li>
    </recipeUsers>
    <researchPrerequisite>TreeSowing</researchPrerequisite>
  </RecipeDef>

</Defs>