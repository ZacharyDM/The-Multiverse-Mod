<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!-- Sujamma brewing recipe -->
  <RecipeDef>
    <defName>BrewSujamma</defName>
    <label>brew sujamma</label>
    <description>Brew the traditional Dunmer alcoholic drink sujamma using saltrice and comberries.</description>
    <jobString>Brewing sujamma.</jobString>
    <workSpeedStat>DrugCookingSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Brewing</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>1200</workAmount>
    <targetCountAdjustment>1</targetCountAdjustment>
    <skillRequirements>
      <Cooking>6</Cooking>
    </skillRequirements>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>RawSaltrice</li>
          </thingDefs>
        </filter>
        <count>8</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>RawComberry</li>
          </thingDefs>
        </filter>
        <count>3</count>
      </li>
    </ingredients>
    <products>
      <Sujamma>3</Sujamma>
    </products>
    <workSkill>Cooking</workSkill>
    <recipeUsers>
      <li>DrugLab</li>
      <li>ElectricDrugLab</li>
    </recipeUsers>
    <researchPrerequisite>DrugProduction</researchPrerequisite>
  </RecipeDef>

