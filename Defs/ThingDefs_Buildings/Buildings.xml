<?xml version="1.0" encoding="utf-8"?>
<ThingDefs>
  <!-- Star Wars Buildings -->
  <ThingDef ParentName="BenchBase">
    <defName>LightsaberForge</defName>
    <label>lightsaber forge</label>
    <description>A specialized workbench designed for constructing lightsabers. The forge focuses kyber crystals and shapes the energy containment field necessary for a functional lightsaber.</description>
    <thingClass>Building_WorkTable</thingClass>
    <graphicData>
      <texPath>Things/Building/Production/TableMachining</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <color>(0.8, 0.9, 1.0)</color>
      <drawSize>(3.5, 1.5)</drawSize>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <castEdgeShadows>true</castEdgeShadows>
    <staticSunShadowHeight>0.20</staticSunShadowHeight>
    <costList>
      <Steel>200</Steel>
      <Plasteel>50</Plasteel>
      <ComponentSpacer>5</ComponentSpacer>
    </costList>
    <altitudeLayer>Building</altitudeLayer>
    <fillPercent>0.5</fillPercent>
    <useHitPoints>True</useHitPoints>
    <statBases>
      <WorkToBuild>4500</WorkToBuild>
      <MaxHitPoints>180</MaxHitPoints>
      <Flammability>1.0</Flammability>
    </statBases>
    <size>(3,1)</size>
    <designationCategory>Production</designationCategory>
    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <surfaceType>Item</surfaceType>
    <constructionSkillPrerequisite>8</constructionSkillPrerequisite>
    <recipes>
      <li>Make_Lightsaber</li>
    </recipes>
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
    <building>
      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
    </building>
    <comps>
      <li Class="CompProperties_Glower">
        <glowRadius>5</glowRadius>
        <glowColor>(100, 180, 255, 0)</glowColor>
      </li>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>200</basePowerConsumption>
      </li>
      <li Class="CompProperties_Flickable"/>
    </comps>
    <designationHotKey>Misc2</designationHotKey>
    <placeWorkers>
      <li>PlaceWorker_ShowFacilitiesConnections</li>
    </placeWorkers>
    <researchPrerequisites>
      <li>LightsaberCrafting</li>
    </researchPrerequisites>
  </ThingDef>

  <ThingDef ParentName="BuildingBase">
    <defName>HoloTable</defName>
    <label>holo table</label>
    <description>An advanced holographic projector that can display three-dimensional images and data. Used for communications, tactical planning, and entertainment throughout the galaxy.</description>
    <thingClass>Building</thingClass>
    <graphicData>
      <texPath>Things/Building/Misc/CommsConsole</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <color>(0.4, 0.6, 1.0)</color>
      <drawSize>(2, 2)</drawSize>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <fillPercent>0.40</fillPercent>
    <pathCost>50</pathCost>
    <castEdgeShadows>true</castEdgeShadows>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToBuild>8000</WorkToBuild>
      <Mass>35</Mass>
      <Flammability>1.0</Flammability>
    </statBases>
    <size>(2, 2)</size>
    <costList>
      <Steel>80</Steel>
      <Plasteel>30</Plasteel>
      <ComponentSpacer>3</ComponentSpacer>
    </costList>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>150</basePowerConsumption>
      </li>
      <li Class="CompProperties_Flickable"/>
      <li Class="CompProperties_Glower">
        <glowRadius>6</glowRadius>
        <glowColor>(100, 150, 255, 0)</glowColor>
      </li>
    </comps>
    <designationCategory>Misc</designationCategory>
    <constructionSkillPrerequisite>6</constructionSkillPrerequisite>
    <researchPrerequisites>
      <li>HolographicTechnology</li>
    </researchPrerequisites>
  </ThingDef>

  <!-- Elder Scrolls Buildings -->
  <ThingDef ParentName="BenchBase">
    <defName>DaedricAltar</defName>
    <label>daedric altar</label>
    <description>A dark stone altar used for communing with the Daedric Princes and crafting items imbued with their power. The altar emanates an otherworldly presence that unsettles most visitors.</description>
    <thingClass>Building_WorkTable</thingClass>
    <graphicData>
      <texPath>Things/Building/Production/TableSculpting</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <color>(0.3, 0.2, 0.3)</color>
      <drawSize>(3, 3)</drawSize>
    </graphicData>
    <castEdgeShadows>true</castEdgeShadows>
    <staticSunShadowHeight>0.35</staticSunShadowHeight>
    <costList>
      <BlocksGranite>150</BlocksGranite>
      <Steel>50</Steel>
      <Gold>25</Gold>
    </costList>
    <altitudeLayer>Building</altitudeLayer>
    <fillPercent>0.8</fillPercent>
    <useHitPoints>True</useHitPoints>
    <statBases>
      <WorkToBuild>8000</WorkToBuild>
      <MaxHitPoints>300</MaxHitPoints>
      <Flammability>0</Flammability>
      <Beauty>-15</Beauty>
    </statBases>
    <size>(3,3)</size>
    <designationCategory>Production</designationCategory>
    <passability>PassThroughOnly</passability>
    <pathCost>60</pathCost>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-2)</interactionCellOffset>
    <surfaceType>Item</surfaceType>
    <constructionSkillPrerequisite>10</constructionSkillPrerequisite>
    <recipes>
      <li>Make_DaedricSword</li>
    </recipes>
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
    <building>
      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
    </building>
    <comps>
      <li Class="CompProperties_Glower">
        <glowRadius>8</glowRadius>
        <glowColor>(150, 50, 50, 0)</glowColor>
      </li>
    </comps>
    <placeWorkers>
      <li>PlaceWorker_ShowFacilitiesConnections</li>
    </placeWorkers>
    <researchPrerequisites>
      <li>DaedricSmithing</li>
    </researchPrerequisites>
  </ThingDef>

  <ThingDef ParentName="BuildingBase">
    <defName>DwarvenAutomaton</defName>
    <label>dwarven spider</label>
    <description>A small mechanical construct left behind by the Dwemer. These automatons continue to function centuries after their creators vanished, patrolling and maintaining ancient ruins.</description>
    <thingClass>Building_TurretGun</thingClass>
    <drawerType>MapMeshAndRealTime</drawerType>
    <graphicData>
      <texPath>Things/Pawn/Mechanoid/Centipede</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <color>(0.7, 0.6, 0.4)</color>
      <drawSize>(1.5, 1.5)</drawSize>
    </graphicData>
    <uiIconPath>Things/Pawn/Mechanoid/Centipede</uiIconPath>
    <uiIconScale>0.90</uiIconScale>
    <altitudeLayer>Building</altitudeLayer>
    <stealable>false</stealable>
    <rotatable>false</rotatable>
    <size>(1,1)</size>
    <statBases>
      <MaxHitPoints>180</MaxHitPoints>
      <Flammability>0.7</Flammability>
      <WorkToBuild>6000</WorkToBuild>
      <Mass>100</Mass>
      <Beauty>-2</Beauty>
      <ShootingAccuracyTurret>0.96</ShootingAccuracyTurret>
    </statBases>
    <tickerType>Normal</tickerType>
    <comps>
      <li Class="CompProperties_Explosive">
        <wickTicks>240</wickTicks>
        <explosiveRadius>3.9</explosiveRadius>
        <explosiveDamageType>Bomb</explosiveDamageType>
        <chanceNeverExplodeFromDamage>0.5</chanceNeverExplodeFromDamage>
      </li>
      <li Class="CompProperties_Forbiddable"/>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>80</basePowerConsumption>
      </li>
      <li Class="CompProperties_Flickable"/>
      <li Class="CompProperties_Breakdownable"/>
    </comps>
    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <fillPercent>0.4</fillPercent>
    <hasTooltip>true</hasTooltip>
    <costList>
      <Steel>120</Steel>
      <DwarvenMetal>40</DwarvenMetal>
      <ComponentIndustrial>6</ComponentIndustrial>
    </costList>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <designationCategory>Security</designationCategory>
    <constructionSkillPrerequisite>8</constructionSkillPrerequisite>
    <building>
      <ai_combatDangerous>true</ai_combatDangerous>
      <turretGunDef>DwarvenSpiderWeapon</turretGunDef>
      <turretBurstCooldownTime>4.8</turretBurstCooldownTime>
    </building>
    <placeWorkers>
      <li>PlaceWorker_TurretTop</li>
      <li>PlaceWorker_ShowTurretRadius</li>
    </placeWorkers>
    <designationHotKey>Misc2</designationHotKey>
    <researchPrerequisites>
      <li>DwarvenEngineering</li>
    </researchPrerequisites>
  </ThingDef>

  <ThingDef ParentName="BuildingBase">
    <defName>TelvanniTower</defName>
    <label>telvanni tower</label>
    <description>A massive mushroom-shaped tower grown through House Telvanni's unique blend of magic and architecture. These towers serve as both homes and laboratories for powerful wizards.</description>
    <thingClass>Building</thingClass>
    <graphicData>
      <texPath>Things/Building/Misc/Ancient_Comms_Tower</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <color>(0.6, 0.4, 0.3)</color>
      <drawSize>(4, 8)</drawSize>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <passability>Impassable</passability>
    <blockWind>true</blockWind>
    <fillPercent>1</fillPercent>
    <blockLight>true</blockLight>
    <canOverlapZones>false</canOverlapZones>
    <castEdgeShadows>true</castEdgeShadows>
    <staticSunShadowHeight>1.0</staticSunShadowHeight>
    <statBases>
      <MaxHitPoints>800</MaxHitPoints>
      <WorkToBuild>25000</WorkToBuild>
      <Flammability>0.8</Flammability>
      <Beauty>15</Beauty>
    </statBases>
    <size>(4,4)</size>
    <costList>
      <WoodLog>400</WoodLog>
      <Steel>100</Steel>
      <ComponentMedieval>10</ComponentMedieval>
    </costList>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>-200</basePowerConsumption>
        <transmitsPower>true</transmitsPower>
      </li>
    </comps>
    <building>
      <isInert>true</isInert>
      <isEdifice>false</isEdifice>
    </building>
    <designationCategory>Misc</designationCategory>
    <constructionSkillPrerequisite>12</constructionSkillPrerequisite>
    <researchPrerequisites>
      <li>TelvanniArchitecture</li>
    </researchPrerequisites>
  </ThingDef>
</ThingDefs>