  <!-- Materials and Resources -->
  <ThingDef ParentName="ResourceBase">
    <defName>DwarvenMetal</defName>
    <label>dwarven metal</label>
    <description>A mysterious alloy created by the lost Dwemer race. It's incredibly durable and lightweight, with properties that modern smiths struggle to replicate.</description>
    <techLevel>Medieval</techLevel>
    <graphicData>
      <texPath>Things/Item/Resource/Steel</texPath>
      <color>(0.7, 0.6, 0.4)</color>
    </graphicData>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Metal_Drop</soundDrop>
    <useHitPoints>false</useHitPoints>
    <healthAffectsPrice>false</healthAffectsPrice>
    <statBases>
      <MarketValue>3.2</MarketValue>
      <Mass>0.035</Mass>
      <Flammability>0</Flammability>
    </statBases>
    <intricate>true</intricate>
    <thingCategories>
      <li>ResourcesRaw</li>
    </thingCategories>
    <stuffProps>
      <categories>
        <li>Metallic</li>
      </categories>
      <color>(184, 153, 102)</color>
      <soundImpactStuff>BulletImpact_Metal</soundImpactStuff>
      <soundMeleeHitSharp>MeleeHit_Metal_Sharp</soundMeleeHitSharp>
      <soundMeleeHitBlunt>MeleeHit_Metal_Blunt</soundMeleeHitBlunt>
      <statOffsets>
        <WorkToMake>800</WorkToMake>
      </statOffsets>
      <statFactors>
        <MarketValue>2.5</MarketValue>
        <MaxHitPoints>1.6</MaxHitPoints>
        <Flammability>0</Flammability>
        <WorkToMake>1.4</WorkToMake>
        <WorkToBuild>1.4</WorkToBuild>
        <MeleeWeapon_CooldownMultiplier>0.9</MeleeWeapon_CooldownMultiplier>
        <SharpDamageMultiplier>1.3</SharpDamageMultiplier>
        <BluntDamageMultiplier>1.2</BluntDamageMultiplier>
      </statFactors>
    </stuffProps>
  </ThingDef>

