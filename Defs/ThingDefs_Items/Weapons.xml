<?xml version="1.0" encoding="utf-8"?>
<ThingDefs>
  <!-- Star Wars Weapons -->
  <ThingDef ParentName="BaseMeleeWeapon_Sharp_Quality">
    <defName>Lightsaber</defName>
    <label>lightsaber</label>
    <description>An elegant weapon from a more civilized age. The lightsaber is a focused beam of pure energy contained within a magnetic field. Used by Jedi and Sith alike, it can cut through almost any material.</description>
    <techLevel>Spacer</techLevel>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponMelee/LongSword</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_MonoSword</soundInteract>
    <meleeWeaponType>Thrust</meleeWeaponType>
    <weaponTags>
      <li>MedievalMeleeDecent</li>
      <li>CE_AI_BROOM</li>
      <li>CE_OneHandedWeapon</li>
    </weaponTags>
    <weaponClasses>
      <li>Melee</li>
      <li>MeleeBladelight</li>
    </weaponClasses>
    <statBases>
      <WorkToMake>25000</WorkToMake>
      <Mass>0.5</Mass>
      <Flammability>0</Flammability>
      <MarketValue>2500</MarketValue>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>0.2</MoveSpeed>
      <MeleeDodgeChance>5</MeleeDodgeChance>
      <MeleeHitChance>2</MeleeHitChance>
    </equippedStatOffsets>
    <costList>
      <Steel>50</Steel>
      <Plasteel>25</Plasteel>
      <ComponentSpacer>2</ComponentSpacer>
    </costList>
    <recipeMaker>
      <researchPrerequisite>LightsaberCrafting</researchPrerequisite>
      <skillRequirements>
        <Crafting>12</Crafting>
      </skillRequirements>
      <recipeUsers>
        <li>FabricationBench</li>
      </recipeUsers>
    </recipeMaker>
    <tools>
      <li>
        <label>handle</label>
        <capacities>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>blade</label>
        <capacities>
          <li>Cut</li>
          <li>Stab</li>
        </capacities>
        <power>22</power>
        <cooldownTime>2</cooldownTime>
        <extraMeleeDamages>
          <li>
            <def>Flame</def>
            <amount>5</amount>
            <chance>0.3</chance>
          </li>
        </extraMeleeDamages>
      </li>
    </tools>
  </ThingDef>

  <ThingDef ParentName="BaseGun">
    <defName>Blaster</defName>
    <label>blaster</label>
    <description>A ranged energy weapon that fires bolts of concentrated plasma. Standard sidearm throughout the galaxy, reliable and effective against most targets.</description>
    <techLevel>Spacer</techLevel>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/Revolver</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Revolver</soundInteract>
    <weaponTags>
      <li>SimpleGun</li>
      <li>StarWarsBlaster</li>
    </weaponTags>
    <weaponClasses>
      <li>RangedLight</li>
    </weaponClasses>
    <statBases>
      <WorkToMake>8000</WorkToMake>
      <Mass>1.2</Mass>
      <AccuracyTouch>0.75</AccuracyTouch>
      <AccuracyShort>0.85</AccuracyShort>
      <AccuracyMedium>0.70</AccuracyMedium>
      <AccuracyLong>0.55</AccuracyLong>
      <RangedWeapon_Cooldown>1.5</RangedWeapon_Cooldown>
      <MarketValue>600</MarketValue>
    </statBases>
    <costList>
      <Steel>40</Steel>
      <Plasteel>15</Plasteel>
      <ComponentIndustrial>3</ComponentIndustrial>
    </costList>
    <recipeMaker>
      <researchPrerequisite>BlasterTechnology</researchPrerequisite>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
      <recipeUsers>
        <li>TableMachining</li>
      </recipeUsers>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>BlasterBolt</defaultProjectile>
        <warmupTime>0.6</warmupTime>
        <range>28</range>
        <soundCast>Shot_Revolver</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>10</power>
        <cooldownTime>2.6</cooldownTime>
      </li>
    </tools>
  </ThingDef>

