<?xml version="1.0" encoding="utf-8"?>
<ThingDefs>
  <!-- Star Wars Foods -->
  <ThingDef ParentName="MealBase">
    <defName>BlueBobaFruit</defName>
    <label>blue boba fruit</label>
    <description>A sweet, blue fruit native to several worlds in the Outer Rim. Often used in desserts and refreshing beverages throughout the galaxy.</description>
    <graphicData>
      <texPath>Things/Item/Resource/PlantMatter/Berry</texPath>
      <color>(0.4, 0.6, 1.0)</color>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <DeteriorationRate>6</DeteriorationRate>
      <MarketValue>1.2</MarketValue>
      <Mass>0.03</Mass>
      <Flammability>1.0</Flammability>
      <Nutrition>0.05</Nutrition>
      <FoodPoisonChanceFixedHuman>0.02</FoodPoisonChanceFixedHuman>
    </statBases>
    <comps>
      <li Class="CompProperties_Rottable">
        <daysToRotStart>14</daysToRotStart>
        <daysToDessicated>999999</daysToDessicated>
        <rotDestroys>true</rotDestroys>
      </li>
      <li Class="CompProperties_ForbiddableAdjacentSpot">
        <radius>2.9</radius>
      </li>
    </comps>
    <ingestible>
      <foodType>VegetableOrFruit</foodType>
      <preferability>DesperateOnly</preferability>
      <maxNumToIngestAtOnce>5</maxNumToIngestAtOnce>
      <ingestEffect>EatVegetarian</ingestEffect>
      <ingestSound>RawVegetable_Eat</ingestSound>
      <hungerOffsetBase>0.05</hungerOffsetBase>
      <joy>0.05</joy>
      <joyKind>Gluttonous</joyKind>
    </ingestible>
    <thingCategories>
      <li>PlantFoodRaw</li>
    </thingCategories>
  </ThingDef>

  <ThingDef ParentName="MealBase">
