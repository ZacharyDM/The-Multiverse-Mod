      <ingestSound>RawMeat_Eat</ingestSound>
      <hungerOffsetBase>0.05</hungerOffsetBase>
    </ingestible>
    <thingCategories>
      <li>MeatRaw</li>
    </thingCategories>
  </ThingDef>

  <ThingDef ParentName="MealCooked">
    <defName>JawaSoup</defName>
    <label>jawa soup</label>
    <description>A hearty soup made from various desert ingredients, traditionally prepared by the Jawa. The exact recipe is a closely guarded secret, but it's surprisingly nutritious and flavorful.</description>
    <graphicData>
      <texPath>Things/Item/Meal/SimpleMeal</texPath>
      <color>(0.8, 0.6, 0.2)</color>
    </graphicData>
    <statBases>
      <DeteriorationRate>10</DeteriorationRate>
      <MarketValue>18</MarketValue>
      <WorkToMake>450</WorkToMake>
      <Mass>0.44</Mass>
      <Flammability>1.0</Flammability>
      <Nutrition>0.9</Nutrition>
      <FoodPoisonChanceFixedHuman>0.02</FoodPoisonChanceFixedHuman>
    </statBases>
    <ingestible>
      <preferability>MealSimple</preferability>
      <ingestEffect>EatVegetarian</ingestEffect>
      <ingestSound>Meal_Eat</ingestSound>
      <hungerOffsetBase>0.9</hungerOffsetBase>
      <joy>0.05</joy>
      <joyKind>Gluttonous</joyKind>
    </ingestible>
    <recipeMaker>
      <recipeUsers>
        <li>ElectricStove</li>
        <li>FueledStove</li>
      </recipeUsers>
      <soundWorking>Recipe_CookMeal</soundWorking>
      <workAmount>450</workAmount>
      <targetCountAdjustment>1</targetCountAdjustment>
      <ingredientValueGetterClass>IngredientValueGetter_Nutrition</ingredientValueGetterClass>
      <ingredients>
        <li>
          <filter>
            <categories>
              <li>PlantFoodRaw</li>
            </categories>
          </filter>
          <count>0.5</count>
        </li>
        <li>
          <filter>
            <categories>
              <li>MeatRaw</li>
            </categories>
          </filter>
          <count>0.25</count>
        </li>
      </ingredients>
    </recipeMaker>
  </ThingDef>

